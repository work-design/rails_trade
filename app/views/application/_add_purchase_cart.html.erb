<%= form_with theme: nil, url: { controller: item_con, action: 'create' }, id: "cart_#{model.id}_#{good_id}", class: 'button_to' do |f| %>
  <%= f.hidden_field :current_cart_id, value: @cart&.id %>
  <%= f.hidden_field :good_type, value: model.base_class_name %>
  <%= f.hidden_field :purchase_id, value: model.id %>
  <%= f.hidden_field :good_id, value: good_id %>
  <button type="submit">
    <i class="fa-solid fa-circle-plus fa-xl has-text-dark-grey"></i>
  </button>
<% end %>
