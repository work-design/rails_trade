<div id="cart_<%= item.cart_identity %>" data-controller="modify" data-modify-submit-value="true" data-modify-step-value="1" class="has-column-centered xx">
  <% if item.number > 1 %>
    <button data-action="modify#minus" class="button is-light is-danger" style="width: 60px">
      <i class="fa-solid fa-minus"></i>
      <span></span>
    </button>
  <% else %>
    <%= button_to({ controller: item_con, action: 'destroy', id: item.id }, method: :delete, params: { current_cart_id: cart.id }, class: 'button is-light is-danger', style: 'width: 60px') do %>
      <i class="fa-solid fa-minus color-grey"></i>
    <% end %>
  <% end %>
  <%= form_with theme: nil, scope: 'item', url: { controller: item_con, action: 'update', id: item.id }, method: :patch, data: { controller: 'input' }, class: '' do |f| %>
    <%= f.hidden_field :current_cart_id, value: cart.id %>
    <%= f.number_field :number, value: item.number.to_human, step: 0.01, data: { action: 'change->input#form focus->input#blank', modify_target: 'input' }, class: 'input has-background-light has-text-centered', style: 'width: 60px' %>
  <% end %>
  <button data-action="modify#plus" class="button is-danger" style="width: 60px">
    <i class="fa-solid fa-plus"></i>
    <span></span>
  </button>
</div>
