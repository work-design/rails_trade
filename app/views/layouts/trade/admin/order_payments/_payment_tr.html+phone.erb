<div id="payment_<%= model.id %>" class="media">
  <div class="weui-media-box__bd">
    <%= yield %>
  </div>
  <div class="media-right as-x">
    <%= form_with theme: nil, scope: :payment_order, url: { controller: 'trade/admin/payment_orders', action: 'create', payment_id: model.id }, class: 'button_to' do |f| %>
      <%= f.hidden_field :order_id, value: order.id %>
      <%= f.hidden_field :order_amount, value: order.amount %>
      <%= f.hidden_field :payment_amount, value: model.total_amount %>
      <button type="submit" class="button is-small is-danger">
        <i class="fa-solid fa-cart-plus"></i>
        <span class="pl-1"><%= t("trade.admin.payment_orders.create.title") %></span>
      </button>
    <% end %>
  </div>
</div>
