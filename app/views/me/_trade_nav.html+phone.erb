<div data-controller="empty" class="box is-padding-less mx-3">
  <div class="box-body">
    <i class="fa-solid fa-fw fa-cash-register has-text-primary"></i>
    <span><%= t('trade.me.title') %></span>
  </div>
  <div class="columns is-4-mobile flex is-vcentered is-centered m-0 is-shadow" data-empty-target="content">
    <%= link_to({ controller: 'trade/me/orders' }, state: 'enter', class: 'column has-column-centered') do %>
      <div class="has-text-primary">
        <i class="fa-solid fa-fw fa-xl fa-list"></i>
      </div>
      <div class="has-text-grey size-7 mt-1"><%= t('trade.admin.orders.index.title') %></div>
    <% end %>
    <%= link_to({ controller: 'trade/in/orders' }, state: 'enter', class: 'column has-column-centered') do %>
      <div class="has-text-primary">
        <i class="fa-solid fa-fw fa-xl fa-list"></i>
      </div>
      <div class="has-text-grey size-7 mt-1"><%= t('trade.in.orders.index.title') %></div>
    <% end %>
  </div>
</div>
