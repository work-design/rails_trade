<div class="box is-padding-less">
  <div class="box-body">
    <span class="size-7 has-border-left-primary"><%= t('trade.my.orders.index.title') %></span>
  </div>
  <div class="columns is-4-mobile flex is-vcentered is-centered m-0" data-empty-target="content">
    <%= link_to({ controller: 'trade/my/orders', state: 'init' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <%= svg_tag 'boxes-packing', class: 'icon is-medium' %>
      </div>
      <div class="text-grey size-7 mt-1">
        <span><%= Trade::Order.enum_i18n(:state, 'init') %></span>
      </div>
    <% end %>
    <%= link_to({ controller: 'trade/my/orders', state: 'done' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <%= svg_tag 'handshake', class: 'icon is-medium' %>
      </div>
      <div class="text-grey size-7 mt-1">
        <span><%= Trade::Order.enum_i18n(:state, 'done') %></span>
      </div>
    <% end %>
    <%= link_to({ controller: 'trade/my/orders', state: 'canceled' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <%= svg_tag 'trash', class: 'icon is-medium' %>
      </div>
      <div class="text-grey size-7 mt-1">
        <span><%= Trade::Order.enum_i18n(:state, 'canceled') %></span>
      </div>
    <% end %>
  </div>
</div>
