<div class="box is-padding-less">
  <div class="box-header">
    <span class="size-7 has-border-left-primary"><%= t('trade.my.orders.index.title') %></span>
  </div>
  <div class="fixed-grid has-3-cols is-shadow-top p-3">
    <div class="grid">
      <%= link_to({ controller: 'trade/my/orders', state: 'init' }, class: 'cell has-column-centered') do %>
        <%= svg_tag 'boxes-packing', class: 'icon is-medium text-primary' %>
        <div class="text-grey size-7 mt-1"><%= Trade::Order.enum_i18n(:state, 'init') %></div>
      <% end %>
      <%= link_to({ controller: 'trade/my/orders', state: 'done' }, class: 'cell has-column-centered') do %>
        <%= svg_tag 'handshake', class: 'icon is-medium text-primary' %>
        <div class="text-grey size-7 mt-1"><%= Trade::Order.enum_i18n(:state, 'done') %></div>
      <% end %>
      <%= link_to({ controller: 'trade/my/orders', state: 'canceled' }, class: 'cell has-column-centered') do %>
        <%= svg_tag 'trash', class: 'icon is-medium text-primary' %>
        <div class="text-grey size-7 mt-1"><%= Trade::Order.enum_i18n(:state, 'canceled') %></div>
      <% end %>
    </div>
  </div>
</div>
