<%= link_to({ controller: 'trade/my/wallets', action: 'show', id: wallet.id }, class: 'column is-one-third has-column-centered') do %>
  <div class="is-several">
    <%= image_tag wallet.wallet_template.logo, class: 'image is-16x16' if wallet.wallet_template.logo.attached? %>
    <span class="text-grey-dark size-7"><%= wallet.wallet_template.name %></span>
  </div>
  <div class="text-weight-medium text-danger-dark is-family-zhushi is-size-5">
    <%= wallet.amount.to_fs(:rounded, precision: wallet.wallet_template.digit) %>
  </div>
<% end %>
