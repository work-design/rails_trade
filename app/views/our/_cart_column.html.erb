<div class="columns is-multiline is-mobile flex is-vcentered is-centered m-0 is-shadow">
  <%= render partial: 'wallet', collection: @wallets, as: :wallet %>
  <%= render partial: 'wallet_template', collection: @wallet_templates, as: :wallet_template %>
  <%= link_to({ controller: 'trade/our/lawful_wallets', action: 'show', **params.permit(:global_member_id) }, class: 'column is-one-third has-column-centered') do %>
    <div class="is-several">
      <%= image_tag 'wallet.png', class: 'image is-16x16' %>
      <span class="text-grey-dark size-7"><%= t('trade.my.lawful_wallets.show.title') %></span>
    </div>
    <div class="text-weight-medium text-danger-dark is-family-zhushi is-size-5">
      <%= @lawful_wallet.amount.to_money.format.html_safe %>
    </div>
  <% end %>
  <% @card_templates.each do |card_template| %>
    <%= link_to({ controller: 'trade/our/card_templates', action: 'show', id: card_template.id }, state: 'enter', class: 'column is-one-third has-column-centered') do %>
      <div class="is-several">
        <%= image_tag card_template.logo, class: 'image is-16x16' if card_template.logo.attached? %>
        <span class="text-grey-dark size-7"><%= card_template.name %></span>
      </div>
      <div class="text-weight-medium text-danger-dark is-family-zhushi is-size-5"><%= @cart.owned_text(card_template) %></div>
    <% end %>
  <% end %>
  <%= link_to({ controller: 'trade/our/promote_goods' }, class: 'column is-one-third has-column-centered') do %>
    <div class="text-grey-dark">
      <i class="fa-solid fa-tags text-primary"></i>
      <span class="text-grey-dark size-7 pl-0"><%= t('trade.my.promote_goods.index.title') %></span>
    </div>
    <div class="text-weight-medium text-danger-dark is-family-zhushi is-size-5">
      <%= current_client.organ.promotes_count %>
    </div>
  <% end %>
</div>
