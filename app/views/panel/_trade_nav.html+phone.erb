<div data-controller="empty" class="weui-panel is-box is-borderless">
  <div class="weui-panel__hd is-flex justify-content-space-between">
    <div>
      <i class="fa-solid fa-fw fa-cash-register has-text-primary"></i>
      <span><%= t('trade.panel.title') %></span>
    </div>
  </div>
  <div class="weui-panel__bd">
    <div class="columns is-4-mobile is-flex is-vcentered is-centered m-0 is-shadow" data-empty-target="content">
      <%= link_to({ controller: 'trade/panel/orders' }, state: 'enter', class: 'column has-column-centered') do %>
        <div class="has-text-primary">
          <i class="fa-solid fa-fw fa-xl fa-list"></i>
        </div>
        <div class="has-text-grey is-size-7 mt-1"><%= t('trade.panel.orders.index.title') %></div>
      <% end %>
      <%= link_to({ controller: 'trade/panel/items' }, state: 'enter', class: 'column has-column-centered') do %>
        <div class="has-text-primary">
          <i class="fa-solid fa-fw fa-xl fa-list-ol"></i>
        </div>
        <div class="has-text-grey is-size-7 mt-1"><%= t('trade.panel.items.index.title') %></div>
      <% end %>
      <%= link_to({ controller: 'trade/panel/payments' }, state: 'enter', class: 'column has-column-centered') do %>
        <div class="has-text-primary">
          <i class="fa-solid fa-fw fa-xl fa-receipt"></i>
        </div>
        <div class="has-text-grey is-size-7 mt-1"><%= t('trade.panel.payments.index.title') %></div>
      <% end %>
    </div>
  </div>
</div>
