<div class="thirteen wide column">

  <div class="ui top attached menu borderless">
    <div class="item"><strong>服务列表</strong></div>
    <div class="right menu">
      <div class="item"><%= link_to '新建', new_admin_facilitate_path, class: 'ui teal button' %></div>
    </div>
  </div>

  <div class="ui segment bottom attached">
  </div>

  <table class="ui selectable structured celled table">
    <thead>
    <tr>
      <th>分类</th>
      <th>ID</th>
      <th>名称</th>
      <th>Logo</th>
      <th>描述</th>
      <th>时间</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% FacilitateTaxon.where('facilitates_count > 0').each do |taxon| %>
      <tr>
        <td rowspan="<%= taxon.facilitates_count + 1 %>">
          <%= taxon.name %>
          <%= link_to edit_admin_facilitate_taxon_path(taxon) do %>
            <i class="write icon"></i>
          <% end %>
        </td>
      </tr>
      <% taxon.facilitates.each do |facilitate| %>
        <%= render partial: 'facilitate', locals: { facilitate: facilitate } %>
      <% end %>
    <% end %>
    </tbody>
  </table>

  <%= paginate @facilitates %>
</div>


