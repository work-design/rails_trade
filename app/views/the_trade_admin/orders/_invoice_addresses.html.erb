<table class="ui table">
  <thead>
    <tr>
      <th colspan="3">Invoice Addresses</th>
      <th colspan="3">
        <%= link_to 'New Address', new_admin_address_path(user_id: @order.user_id), remote: true, class: 'ui mini button' %>
      </th>
    </tr>
  </thead>
  <tbody id="invoice_addresses_tbody">
  <% addresses.each do |address| %>
    <tr>
      <td>
        <div class="ui radio checkbox">
          <%= radio_button_tag :'order[invoice_address_id]', address.id, @order.address_id == address.id, form: 'new_order' %><label></label>
        </div>
      </td>
      <td><%= address.contact_person %></td>
      <td><%= address.tel %></td>
      <td>
        <%= address.area.nation %>
        <%= address.area.province %>
        <%= address.area.city %>
      </td>
      <td><%= address.address %></td>
      <td>
        <%= link_to 'Show', address_path(address) %>
        <%= link_to 'Edit', edit_admin_address_path(address), remote: true %>
        <%= link_to 'Destroy', admin_address_path(address), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


