<%= form_with model: [:admin, @promote_buyer], local: true do |f| %>
  <%= render '/shared/error_messages', target: @promote_buyer %>
  <%= f.select :buyer_id, options_for_select([[@promote_buyer.buyer&.name, @promote_buyer.buyer_id]], @promote_buyer.buyer_id), {}, { class: 'ui fluid dropdown search selection' } %>
  <%= f.select :promote_id, options_for_select([[@promote_buyer.promote&.name, @promote_buyer.promote_id]], @promote_buyer.promote_id), {}, { class: 'ui fluid dropdown search selection' } %>
  <%= f.submit %>
<% end %>
