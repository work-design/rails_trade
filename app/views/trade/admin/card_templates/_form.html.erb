<%= f.text_field :name, required: true %>
<%= f.text_area :description %>
<%= f.number_field :valid_years, step: 1, min: 0 %>
<%= f.number_field :valid_months, step: 1, min: 0, max: 12 %>
<%= f.number_field :valid_days, step: 1, min: 0, max: 31 %>
<%= f.color_field :text_color %>
<%= f.select :currency, options_for_select(Trade::ExchangeRate.currency_options, f.object.currency) %>
<%= f.fields :advances, wrap: { all: nil, input: 'field' }, on: { label: false } do |ef| %>
  <%= render partial: 'item_form', locals: { ef: ef } %>
<% end %>
