<table class="table as-search">
  <tr>
    <th><%= Trade::Cart.human_attribute_name(:good_type) %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:good_type]), class: active_helper(good_type: nil, active: 'button is-info', item: 'button is-light') %>
      <% Trade::Item.options_i18n(:good_type).each do |text, value| %>
        <%= link_to text, filter_params(good_type: value, except: [:id]), class: active_helper(good_type: value, active: 'button is-info', item: 'button is-light') %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= Trade::Cart.human_attribute_name(:aim) %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:aim]), class: active_helper(aim: nil, active: 'button is-info', item: 'button is-light') %>
      <% Trade::Cart.options_i18n(:aim).each do |text, value| %>
        <%= link_to text, filter_params(aim: value, except: [:id]), class: active_helper(aim: value, active: 'button is-info', item: 'button is-light') %>
      <% end %>
    </td>
  </tr>
</table>
