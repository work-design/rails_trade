<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td title="<%= model.id %>">
    <%= button_to({ controller: 'items', action: 'show', id: model.id }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'eye', class: 'icon text-info' %>
      <span class="ml-1"><%= t('.show.title') %></span>
    <% end %>
    <%= button_to({ controller: 'items', action: 'edit', id: model.id }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
      <span class="ml-1"><%= t('.edit.title') %></span>
    <% end %>
    <%= button_to({ controller: 'items', action: 'destroy', id: model.id }, method: :delete, params: { current_cart_id: @cart.id }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
      <span class="ml-1"><%= t('.destroy.title') %></span>
    <% end %>
  </td>
</tr>

<%= render partial: 'promote_tbody', collection: model.item_promotes, as: :model %>
