<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td title="<%= model.id %>">
    <%= button_to({ controller: 'items', action: 'show', id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-circle-info text-info"></i>
      <span class="ml-1"><%= t('.show.title') %></span>
    <% end %>
    <%= button_to({ controller: 'items', action: 'edit', id: model.id }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-pencil text-link"></i>
      <span class="ml-1"><%= t('.edit.title') %></span>
    <% end %>
    <%= button_to({ controller: 'items', action: 'destroy', id: model.id }, method: :delete, params: { current_cart_id: @cart.id }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <i class="fa-solid fa-trash text-danger"></i>
      <span class="ml-1"><%= t('.destroy.title') %></span>
    <% end %>
  </td>
</tr>

<%= render partial: 'promote_tbody', collection: model.item_promotes, as: :model %>
