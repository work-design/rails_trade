<table class="table is-fullwidth is-hoverable">
  <%= render 'index_thead' %>
  <%= render partial: 'index_tbody', layout: 'index_tr', collection: @cart.items, as: :model %>
  <%= render partial: 'cart_promote', layout: 'cart_promote_tr', collection: @cart.cart_promotes, as: :model %>
  <tr>
    <td></td>
    <td><%= Trade::Cart.human_attribute_name(:item_amount) %></td>
    <td colspan="4"></td>
    <td class="has-text-success"><%= @cart.item_amount.to_money.format.html_safe %></td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td><%= Trade::Cart.human_attribute_name(:original_amount) %></td>
    <td colspan="4"></td>
    <td class="has-text-success"><%= @cart.original_amount.to_money.format.html_safe %></td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td><%= Trade::Cart.human_attribute_name(:overall_additional_amount) %></td>
    <td colspan="4"></td>
    <td class="has-text-success"><%= @cart.overall_additional_amount.to_money.format.html_safe %></td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td><%= Trade::Cart.human_attribute_name(:overall_reduced_amount) %></td>
    <td colspan="4"></td>
    <td class="has-text-success"><%= @cart.overall_reduced_amount.to_money.format.html_safe %></td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td><%= Trade::Cart.human_attribute_name(:amount) %></td>
    <td colspan="4"></td>
    <td class="has-text-success"><%= @cart.amount.to_money.format.html_safe %></td>
    <td></td>
  </tr>
</table>
