<td>
  <span><%= model.name %></span>
  <div class="is-several">
  <% if model.user %>
    <i class="fa-solid fa-user"></i>
    <span><%= model.user_id %></span>
  <% end %>
  </div>
</td>
<td>
  <span><%= model.amount.to_fs(:rounded, precision: model.wallet_template.digit) %></span>
  <span><%= model.wallet_template.unit %></span>
</td>
<td>
  <%= link_to({ controller: 'wallet_advances', wallet_id: model.id }, aria: { label: t('trade.admin.wallet_advances.index.title') }, class: 'button is-small is-link is-light') do %>
    <i class="fa-solid fa-gem pr-2"></i>
    <span><%= model.income_amount.to_fs(:rounded, precision: model.wallet_template.digit) %></span>
    <span><%= model.wallet_template.unit %></span>
  <% end %>
</td>
<td>
  <%= link_to({ controller: 'wallet_payments', wallet_id: model.id }, aria: { label: t('trade.admin.wallet_payments.index.title') }, class: 'button is-small is-link is-light') do %>
    <i class="fa-solid fa-credit-card pr-2"></i>
    <span><%= model.expense_amount.to_fs(:rounded, precision: model.wallet_template.digit) %></span>
    <span><%= model.wallet_template.unit %></span>
  <% end %>
</td>
<td>
  <p><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= link_to({ controller: 'wallet_logs', wallet_id: model.id }, aria: { label: t('.wallet_logs.index.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-clock-rotate-left text-primary"></i>
    <% end %>
    <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-circle-info text-info"></i>
    <% end %>
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-pencil text-link"></i>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-trash text-danger"></i>
    <% end %>
  </div>
</td>
