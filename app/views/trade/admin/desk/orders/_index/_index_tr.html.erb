<tr id="desk_tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">

  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ controller: 'desk/items', action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'circle-info', class: 'icon text-info' %>
      <% end %>
      <%= button_to({ controller: 'desk/items', action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil', class: 'icon text-link' %>
      <% end %>
      <%= button_to({ controller: 'desk/items', action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'trash', class: 'icon text-danger' %>
      <% end %>
    </div>
  </td>

