<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'item_promotes', item_id: model.id }, aria: { label: t('trade.admin.item_promotes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-gift"></i>
      <% end if false %>
      <%= link_to({ controller: 'holds', item_id: model.id }, aria: { label: t('trade.admin.holds.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-face-meh has-text-success"></i>
      <% end %>
      <%= link_to({ action: 'carts', id: model.id }, aria: { label: t('trade.admin.items.carts.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cart-shopping has-text-info"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.confirm'), turbo_scroll: true } }) do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
  </td>
</tr>
