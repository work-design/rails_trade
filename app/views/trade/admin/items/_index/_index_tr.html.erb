<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'item_promotes', item_id: model.id }, aria: { label: t('trade.admin.trade_promotes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-gift"></i>
      <% end %>
      <%= link_to({ controller: 'rents', item_id: model.id }, aria: { label: t('trade.admin.rents.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-face-meh"></i>
      <% end if model.aim_rent? %>
      <%= link_to({ action: 'carts', id: model.id }, aria: { label: t('trade.admin.items.carts.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-cart-shopping"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-circle-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-pencil"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.confirm'), turbo_scroll: true } }) do %>
        <i class="fa-regular fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
