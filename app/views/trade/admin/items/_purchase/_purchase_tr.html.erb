<tr id="tr_<%= model.id %>" data-controller="show">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ controller: 'in/orders', action: 'show', id: model.order_id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'eye', class: 'icon text-info' %>
      <% end %>
      <%= button_to({ controller: 'in/orders', action: 'edit', id: model.order_id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil', class: 'icon text-link' %>
      <% end %>
      <%= button_to({ controller: 'in/orders', action: 'destroy', id: model.order_id }, method: :delete, aria: { label: t('.destroy.title') }, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'trash', class: 'icon text-danger' %>
      <% end %>
    </div>
  </td>
</tr>
