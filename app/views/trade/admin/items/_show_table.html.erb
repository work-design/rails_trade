</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:original_amount) %></td>
  <td><%= @item.original_amount.to_money.format.html_safe %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:additional_amount) %></td>
  <td><%= @item.additional_amount.to_money.format.html_safe %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:reduced_amount) %></td>
  <td><%= @item.reduced_amount.to_money.format.html_safe %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:amount) %></td>
  <td><%= @item.amount.to_money.format.html_safe %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:produce_on) %></td>
  <td><%= @item.produce_on %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:expire_at) %></td>
  <td><time data-controller="time"><%= @item.expire_at&.to_fs(:iso8601) %></time></td>
</tr>
