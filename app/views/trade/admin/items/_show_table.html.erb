<div>
  <dt><%= Trade::Item.human_attribute_name(:good_type) %></dt>
  <dd><%= @item.good_type_i18n %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:good_id) %></dt>
  <dd><%= @item.good_name %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:status) %></dt>
  <dd><%= @item.status_i18n %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:single_price) %></dt>
  <dd>
    <span><%= @item.single_price.to_money.format.html_safe %></span>
    <% if @item.vip_code.present? %>
      <span class="tag"><%= @item.vip_code %></span>
    <% end %>
  </dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:number) %></dt>
  <dd><%= @item.number %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:additional_amount) %></dt>
  <dd><%= @item.additional_amount.to_money.format.html_safe %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:reduced_amount) %></dt>
  <dd><%= @item.reduced_amount.to_money.format.html_safe %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:amount) %></dt>
  <dd><%= @item.amount.to_money.format.html_safe %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:wallet_amount) %></dt>
  <dd><%= simple_format @item.wallet_amount %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:produce_on) %></dt>
  <dd><%= @item.produce_on %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:expire_at) %></dt>
  <dd><time data-controller="time"><%= @item.expire_at&.to_fs(:iso8601) %></time></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:produce_on) %></dt>
  <dd><%= @item.produce_on %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:note) %></dt>
  <dd><%= @item.note %></dd>
</div>
<div>
  <dt><%= Trade::Item.human_attribute_name(:extra) %></dt>
  <dd><%= simple_format @item.extra %></dd>
</div>
