<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:good_type) %></td>
  <td><%= @item.good_type_i18n %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:good_id) %></td>
  <td><%= @item.good_name %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:status) %></td>
  <td><%= @item.status_i18n %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:single_price) %></td>
  <td>
    <span><%= @item.single_price.to_money.format.html_safe %></span>
    <% if @item.vip_code.present? %>
      <span class="tag"><%= @item.vip_code %></span>
    <% end %>
  </td>
</tr>
<tr>
  <td class="has-text-right"><%= Trade::Item.human_attribute_name(:number) %></td>
