<dl id="order_<%= model.id %>" class="as-show as-boxed">
  <div>
    <dt><%= Trade::Order.human_attribute_name(:amount) %></dt>
    <dd><%= model.amount.to_money.format.html_safe %></dd>
  </div>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:received_amount) %></dt>
    <dd class="text-success"><%= model.received_amount.to_money.format.html_safe %></dd>
  </div>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:unreceived_amount) %></dt>
    <dd class="text-danger"><%= model.unreceived_amount.to_money.format.html_safe %></dd>
  </div>
</dl>
