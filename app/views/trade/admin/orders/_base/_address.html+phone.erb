<div class="weui-panel is-box">
  <div class="weui-panel__bd">
    <%= button_to({ controller: 'profiled/my/addresses', action: 'order', address_id: @order.address_id }, class: 'weui-cell weui-cell_access') do %>
      <div class="weui-cell__hd">
        <i class="fa-solid fa-fw fa-location-dot has-text-danger pr-2"></i>
      </div>
      <div class="weui-cell__bd">
      <% if @order.address %>
        <p>
          <strong><%= @order.address.contact %></strong>
          <span><%= @order.address.tel %></span>
          <% if @order.address.station %>
            <span class="tag"><%= @order.address.station.name %></span>
          <% end %>
        </p>
        <p class="has-text-grey is-size-7">
          <span><%= @order.address.area.full_name %></span>
          <span><%= @order.address.detail %></span>
        </p>
      <% else %>
        <span>收货人信息</span>
      <% end %>
      </div>
      <div class="weui-cell__ft"></div>
    <% end %>
  </div>
</div>
