<%= render 'top_bar' %>

<%= render 'blank_order' %>
<%= render 'from_address' %>
<%= render 'address' %>

<div class="weui-panel">
  <%= render partial: 'blank_trade_item', collection: @order.trade_items, as: :trade_item, locals: { form: form_object(@order, theme: 'weui') } %>
</div>

<% if @order.trade_items.size > 1 %>
<div class="weui-panel">
  <%= render partial: 'collectable', locals: { form: form_object(@order, theme: 'weui') } %>
</div>
<% end %>

<div class="weui-panel">
  <%= render partial: 'payment_strategy', locals: { form: form_object(@order, theme: 'weui') } %>
</div>

<%= render 'show_order' %>

<div class="box is-radiusless">
  <%= submit_tag '提交', class: 'weui-btn weui-btn_primary', form: 'new_order' %>
</div>
