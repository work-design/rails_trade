<div
  data-controller="weui-dialog"
  data-weui-dialog-id-value="fetch_dialog_<%= item.uuid %>"
  data-action="click->weui-dialog#toggle"
  class="button mx-3 mb-3"
>
  <% if item.good_name.blank? %>
    <span class="has-text-grey">添加物品</span>
  <% else %>
    <span><%= item.good_name %></span>
  <% end %>
  <div class="flex-grow-1">
  <% if item.good_name.present? %>
    <span class="has-text-grey">x</span>
    <span class="has-text-grey"><%= item.number %></span>
    <div class="tag has-text-grey">
      <span><%= item.weight %></span>
      <span class="pl-1">千克</span>
    </div>
  <% end %>
  </div>
</div>

<div data-controller="weui-dialog" id="fetch_dialog_<%= item.uuid %>" class="weui-dialog__wrap">
  <div class="weui-mask" data-action="click->weui-dialog#close"></div>
  <div class="weui-half-screen-dialog" data-weui-dialog-target="dialog">
    <div class="weui-half-screen-dialog__hd">
      <div class="weui-half-screen-dialog__hd__side"></div>
      <div class="weui-half-screen-dialog__hd__main">
        <div class="weui-half-screen-dialog__title">添加物品</div>
      </div>
      <div class="weui-half-screen-dialog__hd__side">
        <button class="weui-icon-btn" data-action="weui-dialog#close">
          <i class="weui-icon-close-thin"></i>
        </button>
      </div>
    </div>
    <div class="weui-half-screen-dialog__bd">
      <%= form.fields :items, model: item do |f| %>
        <%= f.hidden_field :good_type, value: 'Factory::Production', form: 'new_order' %>
        <%= f.hidden_field :organ_id, value: current_organ.id, form: 'new_order' %>
        <%= f.text_field :good_name, form: 'new_order' %>
        <div class="field">
          <label class="label color-grey"><%= Trade::Item.human_attribute_name(:number) %></label>
          <div data-controller="modify" class="control flex align-items-center">
            <i class="fa-solid fa-circle-minus has-text-grey-dark size-4 flex-none" data-action="click->modify#minus"></i>
            <%= f.number_field :number, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, form: 'new_order', class: 'input mx-2 flex-grow-1' %>
            <i class="fa-solid fa-circle-plus has-text-grey-dark size-4 flex-none pr-1" data-action="click->modify#plus"></i>
            <span class="flex-none" style="width: 3em"></span>
          </div>
        </div>
        <div class="field">
          <label class="label color-grey"><%= Trade::Item.human_attribute_name(:weight) %></label>
          <div data-controller="modify" class="control flex align-items-center">
            <i class="fa-solid fa-circle-minus has-text-grey-dark size-4 flex-none" data-action="click->modify#minus"></i>
            <%= f.number_field :weight, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, form: 'new_order', class: 'input mx-2 flex-grow-1' %>
            <i class="fa-solid fa-circle-plus has-text-grey-dark size-4 flex-none pr-1" data-action="click->modify#plus"></i>
            <span class="has-text-grey flex-none" style="width: 3em">千克</span>
          </div>
        </div>
        <div class="field">
          <label class="label color-grey"><%= Trade::Item.human_attribute_name(:volume) %></label>
          <div data-controller="modify" class="control flex align-items-center">
            <i class="fa-solid fa-circle-minus has-text-grey-dark size-4 flex-none" data-action="click->modify#minus"></i>
            <%= f.number_field :volume, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, form: 'new_order', class: 'input mx-2 flex-grow-1' %>
            <i class="fa-solid fa-circle-plus has-text-grey-dark size-4 flex-none pr-1" data-action="click->modify#plus"></i>
            <span class="has-text-grey flex-none" style="width: 3em">立方米</span>
          </div>
        </div>
        <%= f.file_field :image, form: 'new_order' %>
      <% end %>
    </div>
    <div class="weui-half-screen-dialog__ft">
      <%= button_tag '确认', type: 'button', class: 'button is-primary' %>
    </div>
  </div>
</div>
