<%= form_with model: @order, url: { action: 'create' }, id: 'new_order' do |f| %>
  <%= f.hidden_field :uuid %>
  <%= f.hidden_field :from_address_id %>
  <%= f.hidden_field :address_id %>
  <%= f.fields :payments do |ef| %>
    <%= ef.hidden_field :total_amount %>
    <%= ef.hidden_field :comment %>
  <% end %>
<% end %>
