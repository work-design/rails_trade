<%= form_with url: { action: 'batch_destroy' }, method: :delete, data: { controller: 'check-commit', turbo_confirm: t('.batch_destroy.confirm') }, class: 'button_to' do |f| %>
  <%= f.hidden_field :ids, data: { check_commit_target: 'ids' } %>
  <%= button_tag data: { check_commit_target: 'submit', action: 'check-commit#doSubmit' }, disabled: true, class: 'button is-danger' do %>
    <i class="fa-solid fa-trash-can"></i>
    <span class="ml-1"><%= t('.batch_destroy.title') %></span>
  <% end %>
<% end %>
