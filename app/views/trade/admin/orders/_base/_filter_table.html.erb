<table class="table as-search">
  <tr>
    <th><%= Trade::Order.human_attribute_name(:payment_status) %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:payment_status]), class: active_helper(payment_status: nil, active: 'button is-info', item: 'button is-light') %>
      <% Trade::Order.options_i18n(:payment_status).each do |text, value| %>
        <%= link_to text, filter_params(payment_status: value, except: [:id]), class: active_helper(payment_status: value, active: 'button is-info', item: 'button is-light') %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= Trade::Order.human_attribute_name(:state) %></th>
