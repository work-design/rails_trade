<dl id="order_detail_<%= model.id %>" class="as-show is-boxed mx-3">
  <div>
    <dt><%= Trade::Order.human_attribute_name(:uuid) %></dt>
    <dd data-controller="clipboard">
      <span data-clipboard-target="source"><%= model.uuid %></span>
      <span class="weui-badge weui-badge__default" data-action="click->clipboard#copy">复制</span>
      <div data-clipboard-target="toast" class="display-none">
        <div class="weui-mask_transparent"></div>
        <div class="weui-toast">
          <i class="weui-icon-success-no-circle weui-icon_toast"></i>
          <p class="weui-toast__content">复制成功</p>
        </div>
      </div>
    </dd>
  </div>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:serial_number) %></dt>
    <dd><%= model.serial_number %></dd>
  </div>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:created_at) %></dt>
    <dd><time data-controller="time" data-format="human"><%= model.created_at.to_fs(:iso8601) %></time></dd>
  </div>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:item_amount) %></dt>
    <dd><%= model.item_amount.to_money.format.html_safe %></dd>
  </div>
  <% if model.overall_additional_amount > 0 %>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:overall_additional_amount) %></dt>
    <dd><%= model.overall_additional_amount.to_money.format.html_safe %></dd>
  </div>
  <% end %>
  <% if model.overall_reduced_amount > 0 %>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:overall_reduced_amount) %></dt>
    <dd><%= model.overall_reduced_amount.to_money.format.html_safe %></dd>
  </div>
  <% end %>
  <% if model.advance_amount.to_d > 0 %>
    <div>
      <dt><%= Trade::Order.human_attribute_name(:advance_amount) %></dt>
      <dd class="text-danger"><%= model.advance_amount.to_money.format.html_safe %></dd>
    </div>
  <% end %>
  <% if model.adjust_amount.to_d != 0 %>
    <div>
      <dt><%= Trade::Order.human_attribute_name(:adjust_amount) %></dt>
      <dd class="text-danger"><%= model.adjust_amount.to_money.format.html_safe %></dd>
    </div>
  <% end %>
  <div>
    <dt><%= Trade::Order.human_attribute_name(:amount) %></dt>
    <dd class="text-danger"><%= model.amount.to_money.format.html_safe %></dd>
  </div>
</dl>
