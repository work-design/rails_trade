<table class="table is-borderless as-show mx-3">
  <tr>
    <td colspan="2">预估费用</td>
  </tr>
  <tr>
    <td><%= Trade::Order.human_attribute_name(:item_amount) %></td>
    <td><%= @order.item_amount.to_money.format.html_safe %></td>
  </tr>
  <tr>
    <td><%= Trade::Order.human_attribute_name(:overall_additional_amount) %></td>
    <td><%= @order.overall_additional_amount.to_money.format.html_safe if @order.overall_additional_amount.to_d > 0 %></td>
  </tr>
  <% @order.cart_promotes.each do |cart_promote| %>
    <tr>
      <td class=" pl-4"><%= cart_promote.promote.name %></td>
      <td><%= cart_promote.amount.to_money.format.html_safe %></td>
    </tr>
  <% end %>
  <tr>
    <td><%= Trade::Order.human_attribute_name(:overall_reduced_amount) %></td>
    <td><%= @order.overall_reduced_amount.to_money.format.html_safe if @order.overall_reduced_amount.to_d > 0 %></td>
  </tr>
  <tr>
    <td><%= Trade::Order.human_attribute_name(:amount) %></td>
    <td><%= @order.amount.to_money.format.html_safe %></td>
  </tr>
</table>
