<div class="weui-form-preview mt-4">
  <div class="weui-form_preview__hd px-4 pt-4">预估费用</div>
  <div class="weui-form-preview__bd">
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:item_amount) %></label>
      <span class="weui-form-preview__value"><%= @order.item_amount.to_money.format(html_wrap: true).html_safe %></span>
    </div>
    <div class="weui-form-preview__item" data-controller="empty">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:overall_additional_amount) %></label>
      <span class="weui-form-preview__value" data-empty-target="text"><%= @order.overall_additional_amount.to_money.format(html_wrap: true).html_safe if @order.overall_additional_amount.to_d > 0 %></span>
    </div>
    <% @order.cart_promotes.each do |cart_promote| %>
      <div class="weui-form-preview__item pl-4">
        <label class="weui-form-preview__label"><%= cart_promote.promote.name %></label>
        <span class="weui-form-preview__value"><%= cart_promote.amount.to_money.format(html_wrap: true).html_safe %></span>
      </div>
    <% end %>
    <div class="weui-form-preview__item" data-controller="empty">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:overall_reduced_amount) %></label>
      <span class="weui-form-preview__value" data-empty-target="text"><%= @order.overall_reduced_amount.to_money.format(html_wrap: true).html_safe if @order.overall_reduced_amount.to_d > 0 %></span>
    </div>
  </div>
  <div class="weui-form-preview__ft is-justify-content-flex-end">
    <div class="px-4">
      <span><%= Trade::Order.human_attribute_name(:amount) %></span>
      <span>:</span>
      <span><%= @order.amount.to_money.format(html_wrap: true).html_safe %></span>
    </div>
  </div>
</div>
