<div
  data-controller="dispatch"
  data-dispatch-modal-outlet="#modal_<%= item.uuid %>"
  data-dispatch-click-value="show"
  data-action="click->dispatch#doClick"
  class="button as-boxed mb-3"
>
  <span class="text-grey">添加物品</span>
</div>

<div id="modal_<%= item.uuid %>" data-controller="modal" class="modal is-mobile is-mobile-bottom">
  <div data-action="click->modal#hide" class="modal-background has-animate-fade-in"></div>
  <div class="modal-card has-animate-slide-up">
    <header class="modal-card-head">
      <div class="modal-card-title">添加物品</div>
      <button class="delete" data-action="modal#hide"></button>
    </header>
    <section data-controller="coeff" class="modal-card-body">
      <%= form.fields :items, model: item do |f| %>
        <%= render partial: 'item_form', locals: { f: f } %>
      <% end %>
    </section>
    <footer class="modal-card-foot">
      <%= button_tag '确认', value: 'new', form: 'new_order', class: 'button is-fullwidth is-primary' %>
    </footer>
  </div>
</div>
