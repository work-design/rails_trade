<div class="media">
  <% if item.good.logo.attached? %>
    <div class="media-left">
      <%= image_tag item.good.logo, class: 'image is-64x64' %>
    </div>
  <% end %>
  <div class="media-content">
    <h4><%= item.good_name %></h4>
    <p>
      <span class="text-danger"><%= item.single_price.to_money.format.html_safe %></span>
      <span>x</span>
      <span class="size-7"><%= item.number %></span>
    </p>
    <p><%= item.member&.name %></p>
  </div>
</div>
