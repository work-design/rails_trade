<div class="media">
  <div class="media-left" data-controller="empty">
    <%= image_tag item.good.logo, class: 'image is-64x64' if item.good.logo.attached? %>
  </div>
  <div class="media-content">
    <h4 class="weui-media-box__title">
      <span><%= item.good.name %></span>
    </h4>
    <p class="weui-media-box__desc">
      <span class="color-danger"><%= item.single_price.to_money.format.html_safe %></span>
      <span>x</span>
      <span class="size-7"><%= item.number %></span>
    </p>
    <p><%= item.member&.name %></p>
  </div>
</div>
