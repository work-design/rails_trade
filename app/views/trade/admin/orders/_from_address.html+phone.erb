<%= button_to({ controller: 'ship/my/addresses', action: 'order_from', from_address_id: @order.from_address_id }, class: 'media button is-fullwidth') do %>
  <div class="media-left">
    <%= svg_tag 'location-dot' %>
  </div>
  <div class="media-content">
  <% if @order.from_address %>
    <p>
      <strong><%= @order.from_address.contact %></strong>
      <span><%= @order.from_address.tel %></span>
      <% if @order.from_address.station %>
        <span class="tag"><%= @order.from_address.station.name %></span>
      <% end %>
    </p>
    <p class="text-grey size-7">
      <span><%= @order.from_address.area.full_name %></span>
      <span><%= @order.from_address.detail %></span>
    </p>
  <% else %>
    <span>发货人信息</span>
  <% end %>
  </div>
  <div class="media-right">
    <%= svg_tag 'chevron-right' %>
  </div>
<% end %>
