  <div class="level-item text-centered">
    <div>
      <p class="heading">待收款总额</p>
      <p class="title"><%= @orders.unscope(:limit, :offset).sum(:unreceived_amount).to_money.format.html_safe %></p>
    </div>
  </div>
  <div class="level-item text-centered">
    <div>
      <p class="heading">已收款总额</p>
