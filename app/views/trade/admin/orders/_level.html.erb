    </div>
  </div>
  <div class="level-item text-centered">
    <div>
      <p class="heading">订单总额</p>
      <p class="title"><%= @orders.unscope(:limit, :offset).sum(:amount).to_money.format.html_safe %></p>
    </div>
  </div>
  <div class="level-item text-centered">
    <div>
      <p class="heading">订单数</p>
      <p class="title"><%= @orders.total_count %></p>
    </div>
