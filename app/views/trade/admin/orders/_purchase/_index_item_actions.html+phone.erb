<%= form.fields :items, model: model.purchase_items.build do |f| %>
  <div id="tr_<%= model.id %>" class="media">
    <div class="media-left">
      <%= f.check_box 'xx', form: 'new_order' %>
      <%= f.hidden_field :source_id, form: 'new_order' %>
      <%= f.hidden_field :number, value: model.number, form: 'new_order' %>
      <%= f.hidden_field :good_name, value: model.good_name, form: 'new_order' %>
    </div>
    <%= link_to({ action: 'show', id: model.id }, state: 'clear', class: 'media-content') do %>
      <%= yield %>
    <% end %>
    <div class="media-right">
      <%= button_to({ action: 'actions', id: model.id }, state: 'enter', class: 'button is-borderless') do %>
        <i class="fa-solid fa-lg fa-ellipsis-h has-text-grey"></i>
      <% end %>
    </div>
  </div>
<% end %>