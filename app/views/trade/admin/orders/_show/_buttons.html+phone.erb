<div class="weui-panel">
  <div class="weui-panel__ft">
    <div class="buttons are-small my-2 is-centered">
      <a class="button is-small is-primary" href="https://work.weixin.qq.com/kfid/kfc07cf8e100d86863e" rel="nofollow">
        <i class="fa-solid fa-headset"></i>
        <span class="pl-1">联系客服</span>
      </a>
      <button
        data-controller="mini-program"
        data-mini-program-url-value="/pages/print/execute/index"
        data-mini-program-data-value="<%= { url: url_for(action: 'print_data', id: @order.id, only_path: false, **Rails.application.routes.default_url_options) }.to_json %>"
        data-action="click->mini-program#link"
        class="button is-small is-info"
      >
        <i class="fa-solid fa-print"></i>
        <span>打印订单</span>
      </button>
      <%= link_to({ action: 'payment_types', id: @order.id }, class: 'button is-small is-link') do %>
        <span>支付</span>
      <% end if @order.can_pay? %>
    </div>
  </div>
</div>
