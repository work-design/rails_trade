<nav data-controller="switch" class="level box is-narrow background-success-light as-attached-top">
  <div class="level-left buttons are-small">
    <%= button_to({ action: 'print' }, class: 'button is-info') do %>
      <i class="fa-solid fa-print"></i>
      <span class="ml-1"><%= t('.print.title') %></span>
    <% end %>
    <% if @order.can_pay? %>
      <%= button_to({ action: 'payment_types' }, class: 'button is-danger') do %>
        <i class="fa-solid fa-receipt"></i>
        <span class="ml-1"><%= t('.payment_types.title') %></span>
      <% end %>
    <% end %>
  </div>
</nav>
