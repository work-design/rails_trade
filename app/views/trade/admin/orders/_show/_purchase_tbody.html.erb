<td>
  <div class="is-several">
    <% if model.good_type == 'Factory::Production' %>
      <%= image_tag model.purchase.logo, class: 'image is-32x32' if model.purchase && model.purchase.logo&.attached? %>
      <%= link_to({ controller: 'factory/admin/purchase_items', production_id: model.purchase_id }, target: '_blank') do %>
        <span><%= model.purchase.name %></span>
      <% end %>
    <% elsif model.purchase %>
      <%= image_tag model.purchase.logo, class: 'image is-32x32' if model.purchase && model.purchase.logo&.attached? %>
      <%= link_to model.purchase, target: '_blank' do %>
        <span><%= model.purchase.name %></span>
      <% end %>
    <% end %>
    <% if ['rent', 'invest'].include?(model.aim) %>
      <span class="tag"><%= model.aim_i18n %></span>
    <% end %>
  </div>
</td>
<td>
  <span><%= model.purchase.price.to_money.format.html_safe %></span>
  <i class="fa-solid fa-xmark has-text-grey"></i>
  <span><%= model.number.to_human %></span>
</td>
<td><%= model.original_amount.to_money.format.html_safe %></td>
<td>
  <p><%= model.additional_amount.to_money.format.html_safe %></p>
  <p><%= model.reduced_amount.to_money.format.html_safe %></p>
</td>
<td><%= model.amount.to_money.format.html_safe %></td>
<td>
  <p><%= link_to '订单流程', { controller: 'items', action: 'show', id: model.id } %></p>
  <p>
    <%= link_to({ controller: 'holds', item_id: model.id }, state: 'enter', aria: { label: t('trade.admin.holds.index.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-face-meh has-text-success"></i>
    <% end %>
  </p>
</td>
