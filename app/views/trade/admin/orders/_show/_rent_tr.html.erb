<tr id="tr_<%= item.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'items', action: 'show', id: item.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'eye', class: 'icon text-info' %>
      <% end %>
      <%= link_to({ controller: 'items', action: 'edit', id: item.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil' %>
      <% end %>
      <%= button_to({ controller: 'items', action: 'compute', id: item.id }, method: :patch, aria: { label: t('trade.admin.items.compute.title') }, form: { data: { turbo_confirm: t('.compute.confirm') } }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-sync"></i>
      <% end %>
      <%= button_to({ controller: 'items', action: 'destroy', id: item.id }, method: :delete, aria: { label: t('.destroy.title') }, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'trash' %>
      <% end %>
    </div>
  </td>
</tr>
<%= render partial: 'promote_tbody', collection: item.item_promotes, as: :item_promote %>
