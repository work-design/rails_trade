<tr>
  <td>
    <span class="tag"><%= model.payment.type_i18n %></span>
    <span class="family-monospace"><%= model.payment.payment_uuid %></span>
  </td>
  <td colspan="2" class="text-right">
  <% if model.payment.is_a?(Trade::WalletPayment) && model.payment.wallet.is_a?(Trade::CustomWallet) %>
    <span><%= model.payment_amount.to_fs(:rounded, precision: model.payment.wallet.wallet_template.digit) %></span>
    <span><%= model.payment.wallet.wallet_template.unit %></span>
    <span>抵扣</span>
    <span><%= model.order_amount.to_money.format(html_safe: true).html_safe %></span>
  <% else %>
    <span class="text-grey">订单金额：</span>
  <% end %>
  </td>
  <td><span><%= model.order_amount.to_money.format.html_safe %></span></td>
  <td>
    <span class="text-grey"><%= Trade::PaymentOrder.human_attribute_name(:payment_amount) %>：</span>
    <span><%= model.payment_amount.to_money.format.html_safe %></span>
  </td>
</tr>
