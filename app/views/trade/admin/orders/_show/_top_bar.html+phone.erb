<div class="as-bar">
  <% if current_state %>
    <%= link_to(current_state.prev_path, class: 'px-4') do %>
      <%= svg_tag 'angle-left', kind: 'regular' %>
    <% end %>
  <% else %>
    <%= link_to({ controller: 'orders' }, class: 'px-4') do %>
      <%= svg_tag 'angle-left', kind: 'regular' %>
    <% end %>
  <% end %>
  <div class="bar-title"><%= @order.uuid %></div>
  <i class="px-5"></i>
</div>
