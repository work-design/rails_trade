<%= form_with model: @order, url: { action: 'create' }, id: 'new_order', class: 'mt-3' do |f| %>
  <%= f.hidden_field :current_cart_id %>
<% end %>

<div class="box is-padding-less">
  <% if @cart.aim_rent? %>
    <%= render partial: 'rent_item', collection: @cart.items.status_checked, as: :item %>
  <% else %>
    <%= render partial: 'item', collection: @cart.items.status_checked, as: :item %>
  <% end %>
  <%= render partial: 'item', collection: @cart.trial_card_items, as: :item %>
</div>

<%= render partial: 'cart', locals: { cart: @cart } %>

<%= submit_tag t('.create.title'), class: 'button is-fullwidth is-success', form: 'new_order' %>
