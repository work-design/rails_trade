<%= form_with url: { action: 'cart_create' }, id: 'new_order' do |f| %>
<% end %>

<table class="table is-fullwidth as-boxed mt-3">
  <thead>
    <tr>
      <th><%= Trade::Item.human_attribute_name(:good_name) %></th>
      <th><%= Trade::Item.human_attribute_name(:number) %></th>
      <th><%= Trade::Item.human_attribute_name(:amount) %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'item', collection: @cart.checked_all_items, as: :model %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="2"></th>
      <th>
        <%= submit_tag t('.create.title'), class: 'button is-success', form: 'new_order' %>
      </th>
    </tr>
  </tfoot>
</table>
