<table class="table is-fullwidth">
  <%= render 'index_thead' %>
  <%= render partial: 'index_tbody', collection: @order.trade_items, as: :trade_item %>
  <% @order.trade_promotes.each do |trade_promote| %>
    <tr>
      <td><%= trade_promote.promote.name %></td>
      <td colspan="3"></td>
      <td><%= trade_promote.amount %></td>
      <td>
        <% if trade_promote.promote.editable %>
          <%= link_to({ controller: 'trade_promotes', action: 'edit', id: trade_promote.id }, class: 'button is-small is-rounded is-light') do %>
            <i class="fa-light fa-pencil"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  <tr class="active">
    <td>总价</td>
    <td colspan="3"></td>
    <td>
      <%= @order.amount %>
      <%= link_to({ controller: 'order_payments', action: 'new', order_id: @order.id }, data: { turbo_frame: 'modal' }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-light fa-credit-card"></i>
      <% end %>
    </td>
    <td></td>
  </tr>
</table>
