<td><%= model.type_i18n %></td>
<td><%= model.account_name %></td>
<td><%= model.account_num %></td>
<td><%= model.bank %></td>
<td>
  <% model.payment_references.each do |reference| %>
    <p id="reference_<%= reference.id %>">
      <%= reference.cart.name %>
      <%= button_to t('.remove'), { controller: 'payment_references', action: 'destroy', payment_method_id: model.id, id: reference.id }, method: :delete %>
    </p>
  <% end %>
</td>
<td>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :verified, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
