<%= form_with theme: 'search', model: PaymentMethod.new do |f| %>
  <div class="fields">
    <%= f.text_field :account_name, placeholder: PaymentMethod.human_attribute_name(:account_name) %>
    <%= f.text_field :account_num, placeholder: PaymentMethod.human_attribute_name(:account_num) %>
    <%= f.text_field :bank, placeholder: PaymentMethod.human_attribute_name(:bank) %>
    <%= f.text_field :'buyers.name-like', placeholder: 'name' %>
    <%= f.submit %>
    <%= link_to t('.clear'), filter_params(only: []), class: 'ui white button' %>
  </div>
<% end %>

<dl>
  <dt>Admin</dt>
  <dd>
    <%= link_to 'Admin', filter_params(myself: 0), class: active_params(myself: 0, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <%= link_to 'User', filter_params(myself: 1), class: active_params(myself: 1, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
  </dd>
</dl>
