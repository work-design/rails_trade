<%= form_with model: @payment_reference, as: :payment_reference, url: admin_payment_method_references_path(@payment_method) do |f| %>
  <%= f.select :buyer_id, options_for_select([]), { label: 'Buyer', include_blank: true }, { class: 'ui search fluid dropdown' } %>
  <%= f.submit %>
<% end %>

<script>
  $('.ui.dropdown').dropdown({
    apiSettings: {
      url: '/buyers/search?q={query}',
      beforeSend: function(settings) {
        return settings;
      }
    },
    fields: {
      name: 'name_detail',
      value: 'id'
    },
    minCharacters: 2
  });
</script>
