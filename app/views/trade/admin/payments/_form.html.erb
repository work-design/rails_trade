<%= hidden_field_tag :order_id, params[:order_id] %>
<% if params[:order_id] %>
  <%= f.hidden_field :type, value: 'HandPayment' %>
<% else %>
  <%= f.select :type, options_for_select(Trade::Payment.options_i18n(:type), @payment.type) %>
<% end %>
<%= f.text_field :payment_uuid %>
<%= f.number_field :total_amount, step: Trade::Payment.total_amount_step, required: true %>
<%= f.number_field :fee_amount, step: '0.01' %>
<%= f.number_field :income_amount, step: '0.01' %>
<%= f.datetime_field :notified_at %>
<%= f.text_field :buyer_name %>
<%= f.text_field :buyer_identifier %>
<%= f.text_field :buyer_bank %>
<%= f.text_field :comment %>
