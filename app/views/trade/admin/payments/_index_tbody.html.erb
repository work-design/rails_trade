<td>
  <p><%= model.payment_uuid %></p>
  <div class="tag"><%= model.type_i18n %></div>
</td>
<td id="checked_amount_<%= model.id %>">
  <%= render partial: 'checked_amount', locals: { payment: model } %>
</td>
<td>
  <%= model.total_amount %>
</td>
<td>
  <p><%= model.income_amount.to_d %></p>
  <p><%= model.fee_amount.to_d %></p>
</td>
<td><%= model.adjust_amount %></td>
<td>
  <p><%= model.buyer_name %></p>
  <p><%= model.buyer_identifier %></p>
  <p><%= model.buyer_bank %></p>
  <% if model.payment_method %>
    <%= link_to 'Payment Method', { controller: 'payment_methods', action: 'show', id: model.payment_method_id }, class: 'tag', targe: '_blank' %>
  <% end %>
</td>
<td><time data-controller="time"><%= model.notified_at.to_s(:rfc822) if model.notified_at %></time></td>
