<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <span data-show-target="item" style="visibility: hidden">
      <% if model.payment_method.present? %>
        <%= link_to t('.show'), { controller: 'payment_methods', action: 'show', id: model.payment_method_id }, class: 'button is-small is-rounded is-light', target: '_blank' %>
      <% end %>
      <%= link_to t('.checking'), { controller: 'payment_orders', action: 'new', payment_id: model.id }, class: 'button is-small is-rounded is-light' %>
      <%= link_to({ controller: 'auditor/admin/audits', audited_type: 'Payment', audited_id: model.id }, aria: { label: t('.log') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-comments"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
    </span>
  </td>
</tr>
