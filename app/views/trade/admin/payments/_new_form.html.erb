<%= form_with theme: 'modal', model: @payment, scope: :payment, url: { action: 'create' } do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= f.select :type, options_for_select(Trade::Payment.options_i18n(:type), @payment.type) %>
    <%= f.text_field :payment_uuid %>
    <%= render partial: 'form', locals: { f: f } %>
  </section>
  <%= f.submit %>
<% end %>
