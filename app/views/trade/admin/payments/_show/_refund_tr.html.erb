<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ controller: 'refunds', action: 'show', id: model.id }, aria: { label: t('.refunds.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'circle-info', class: 'icon text-info' %>
      <% end %>
    </div>
  </td>
</tr>
