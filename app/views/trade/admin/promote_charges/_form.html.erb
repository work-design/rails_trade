<%= f.select :type, options_for_select(Trade::PromoteCharge.options_i18n(:type), @promote_charge.type) %>
<%= f.number_field :min, step: Trade::PromoteCharge.min_step %>
<%= f.check_box :contain_min %>
<%= f.number_field :max, step: Trade::PromoteCharge.max_step %>
<%= f.check_box :contain_max %>
<%= f.number_field :parameter, step: 0.01, wrap: { all_id: true } %>
<%= f.number_field :base_price, step: 0.01 %>
<% Trade::PromoteCharge.extra_columns.each do |ex| %>
  <%= f.text_field ex %>
<% end %>
