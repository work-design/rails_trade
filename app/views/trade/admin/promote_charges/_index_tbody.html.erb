<td><%= model.type_i18n %></td>
<td>
  <p><%= model.min %></p>
  <p><%= model.max %></p>
</td>
<td>
  <p>
    <%= form_with theme: nil, scope: 'promote_charge', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :contain_min, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
      <label data-action="click->input#check"></label>
    <% end %>
  </p>
  <p>
    <%= form_with theme: nil, scope: 'promote_charge', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :contain_max, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
      <label data-action="click->input#check"></label>
    <% end %>
  </p>
</td>
<td><%= model.parameter %></td>
<td><%= model.base_price.to_money.format.html_safe %></td>
<td><pre><%= model.extra.to_format_yaml %></pre></td>
