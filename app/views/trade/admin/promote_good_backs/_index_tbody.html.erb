<td>
  <p><%= model.good_type_i18n %></p>
  <p>
  <% if model.good_id %>
    <span><%= model.good_name %></span>
    <span class="text-grey">(<%= model.good_id %>)</span>
  <% else %>
    <span class="text-success">不限商品</span>
  <% end %>
  </p>
</td>
<td><%= model.promote.name %></td>
<td>
  <p class="text-success"><%= model.user&.name %></p>
  <p><%# model.member&.name %></p>
</td>
<td>
  <p><%= model.status_i18n %></p>
</td>
<td>
  <p><time data-controller="time"><%= model.effect_at&.to_fs(:iso8601) %></time></p>
  <p><time data-controller="time"><%= model.expire_at&.to_fs(:iso8601) %></time></p>
</td>
<td>
  <span><%= model.use_limit.blank? ? '不限次' : model.use_limit %></span>
  <span class="text-grey">/</span>
  <%= link_to(model.item_promotes_count, { controller: 'item_promotes', promote_good_id: model.id }, aria: { label: t('trade.admin.item_promotes.index.title') }) %>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-pencil"></i>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <%= svg_tag 'trash', class: 'icon' %>
    <% end %>
  </div>
</td>