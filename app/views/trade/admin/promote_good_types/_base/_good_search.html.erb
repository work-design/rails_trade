<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">商品</label>
  </div>
  <div class="field-body">
    <div class="panel" data-controller="typer" data-typer-url-value="<%= url_for(action: 'search', good_type: @promote_good.good_type) %>" data-typer-method-value="post">
      <%= f.hidden_field :good_id, data: { typer_target: 'value' } %>
      <div class="control has-icons-left">
        <%= search_field_tag 'name-like', nil, class: 'input', placeholder: '搜索', data: { typer_target: 'input' } %>
        <span class="icon is-left"><i class="fa-regular fa-search"></i></span>
      </div>
      <div class="panel" id="goods_content"></div>
    </div>
  </div>
</div>
