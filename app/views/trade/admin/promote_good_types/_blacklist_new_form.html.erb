<%= form_with theme: 'modal', model: @blacklist, scope: :promote_good, url: { action: 'blacklist_create' }, data: { controller: 'equal', equal_plus_value: { years: 1 }.to_json } do |f| %>
  <header class="modal-card-head">
    <p class="modal-card-title"><%= t('.title') %></p>
    <button type="button" data-action="modal#close" class="delete"></button>
  </header>
  <section class="modal-card-body">
    <%= render 'error_messages', target: f.object  %>
    <%= f.datetime_field :effect_at, data: { action: 'change->equal#updateTime' }, step: 1 %>
    <%= f.datetime_field :expire_at, data: { equal_target: 'goal' }, step: 1 %>
    <%= render partial: 'good_search', locals: { f: f } %>
  </section>
  <footer class="modal-card-foot">
    <%= f.submit %>
  </footer>
<% end %>
