<% Trade::PromoteGood.options_i18n(:good_type).each do |text, good_type| %>
  <%= link_to({ action: 'new', good_type: good_type }, data: { turbo_frame: 'modal' }, class: 'button is-link') do %>
    <i class="fa-light fa-plus"></i>
    <span><%= text %></span>
    <span><%= t('.new') %></span>
  <% end %>
  <%= link_to({ action: 'user', good_type: good_type }, data: { turbo_frame: 'modal' }, class: 'button is-warning') do %>
    <i class="fa-light fa-plus"></i>
    <span><%= text %></span>
    <span><%= t('.new') %></span>
  <% end %>
<% end %>
