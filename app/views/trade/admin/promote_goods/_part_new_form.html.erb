<%= form_with theme: 'modal', model: @promote_good, scope: :promote_good, url: { action: 'part_create' }, data: { controller: 'equal', equal_plus_value: { years: 1 }.to_json } do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= render 'error_messages', target: f.object  %>
    <%= f.hidden_field :good_type %>
    <%= f.datetime_field :effect_at, data: { action: 'change->equal#updateTime' }, step: 1 %>
    <%= f.datetime_field :expire_at, data: { equal_target: 'goal' }, step: 1 %>
    <%= render partial: 'good_search', locals: { f: f } %>
  </section>
  <%= f.submit %>
<% end %>
