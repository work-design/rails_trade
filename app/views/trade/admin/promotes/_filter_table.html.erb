<table class="as-search">
  <tr>
    <th><%= Promote.human_attribute_name(:scope) %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:scope]), class: active_params(scope: '', active_class: 'button is-info', item_class: 'button is-light') %>
      <% Promote.options_i18n(:scope).each do |text, value| %>
      <%= link_to text, filter_params(scope: value), class: active_params(scope: value, active_class: 'button is-info', item_class: 'button is-light') %>
      <% end %>
    </td>
  </tr>
</table>
