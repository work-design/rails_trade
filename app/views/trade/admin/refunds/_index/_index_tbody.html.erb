<td><%= model.refund_uuid %></td>
<td>
  <p><%= link_to model.order.uuid, { controller: 'orders', action: 'show', id: model.order_id } %></p>
  <p><%= link_to model.payment.payment_uuid, { controller: 'payments', action: 'show', id: model.payment_id } %></p>
</td>
<td><%= model.total_amount.to_money(model.currency).format %></td>
<td><%= model.type_i18n %></td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
<td><%= model.state_i18n %></td>
<td><%= model.comment %></td>
<td>
  <% if model.refunded_at %>
    <time data-controller="time"><%= model.refunded_at.to_fs(:iso8601) %></time>
  <% else %>
    <div class="buttons are-small">
      <%= button_to 'Approve', { action: 'confirm', id: model.id }, method: :patch, data: { turbo_confirm: t('.confirm') }, class: 'button is-primary' %>
      <div class="or"></div>
      <%= button_to 'Deny', { action: 'deny', id: model.id }, method: :patch, data: { turbo_confirm: 'Deny model!' }, class: 'button is-danger' %>
    </div>
  <% end %>
  <% if model.reason %>
    <p><%= model.reason.truncate(27) %></p>
  <% end %>
</td>
<td><%= model.operator&.name %></td>
