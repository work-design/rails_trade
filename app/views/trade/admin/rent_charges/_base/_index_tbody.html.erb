<td>
  <p>
    <span><%= model.min %></span>
    <span class="has-text-grey is-size-0_9"><%= model.rentable.rent_unit_i18n %></span>
  </p>
  <p>
    <span><%= model.max %></span>
    <span class="has-text-grey is-size-0_9"><%= model.rentable.rent_unit_i18n %></span>
  </p>
</td>
<td>
  <%= form_with theme: nil, scope: 'promote_charge', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :contain_min, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
  <%= form_with theme: nil, scope: 'promote_charge', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :contain_max, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td><%= model.parameter.to_money.format.html_safe %></td>
<td>
  <div>
    <% model.wallet_price.each do |key, value| %>
      <div class="tags has-addons control mb-0">
        <div class="tag is-success"><%= key %></div>
        <div class="tag is-light">
          <span><%= value %></span>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to({ action: 'wallet', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('bench.admin.facilitates.wallet.title') }) do %>
    <i class="fa-solid fa-sm fa-pencil has-text-grey"></i>
  <% end %>
</td>
<td><%= model.base_price.to_money.format.html_safe %></td>
<td><%= simple_format(model.extra) %></td>
