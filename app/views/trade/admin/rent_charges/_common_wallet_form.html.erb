<%= f.fields :wallet_price, all: { normal: nil }, wrap: { input: 'field' } do |ef| %>
  <div class="field is-horizontal">
    <label class="field-label is-normal"><%= wallet_template.name %></label>
    <div class="field-body">
      <%= ef.hidden_field :code, value: wallet_template.code, index: wallet_template.id %>
      <%= ef.number_field :price, step: wallet_template.step, value: f.object.wallet_price.fetch(wallet_template.code, wallet_template.step), index: wallet_template.id %>
      <div class="field is-narrow has-addons flex">
        <span><%= wallet_template.unit %></span>
      </div>
    </div>
  </div>
<% end %>
