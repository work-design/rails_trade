<%= button_to({ action: 'destroy' }, method: :delete, class: 'has-text-danger', form: { data: { turbo_confirm: t('.confirm') }, class: 'weui-actionsheet__cell weui-actionsheet__cell_warn' }) do %>
  <i class="fa-solid fa-trash"></i>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= link_to({ action: 'edit' }, class: 'weui-actionsheet__cell') do %>
  <i class="fa-solid fa-pencil"></i>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show' }, class: 'weui-actionsheet__cell') do %>
  <i class="fa-solid fa-circle-info"></i>
  <span><%= t('.show.title') %></span>
<% end %>
<%= link_to({ controller: 'refunds', action: 'new', payment_id: @scan_payment.id }, class: 'weui-actionsheet__cell') do %>
  <i class="fa-solid fa-thumbs-down"></i>
  <span><%= t('trade.admin.refunds.new.title') %></span>
  <span class="pl-1"><%= @scan_payment.refunds_count %></span>
<% end %>
