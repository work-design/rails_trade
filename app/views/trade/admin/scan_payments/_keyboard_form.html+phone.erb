<div class="weui-form__control-area">
  <div class="weui-cells__group weui-cells__group_form">
    <div class="weui-cells__title"><%= t('.title') %></div>
    <div class="weui-cells">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
  </div>
</div>
<div class="weui-form__opr-area">
  <div
    data-controller="keyboard"
    data-keyboard-id-value="<%= id %>"
    data-keyboard-dot-value="dot"
    data-keyboard-digit-value="2"
    class="number_keyboard"
  >
    <div class="keyboard-right">
      <div class="keyboard-item height-1x">
        <div data-action="click->keyboard#backspace"><i class="fa-solid fa-arrow-left"></i></div>
      </div>
      <div class="keyboard-item height-3x">
        <div
          data-controller="scan"
          data-scan-form-value="scan_payment_form"
          data-action="click->scan#report"
          class="keyboard-button"
          data-report-url="<%= url_for(action: 'create') %>"
        >
          <span>чбошод</span>
        </div>
      </div>
    </div>
  </div>
</div>
