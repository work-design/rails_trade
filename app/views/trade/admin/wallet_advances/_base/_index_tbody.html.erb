<td>
<% if @wallet.wallet_template_id %>
  <span><%= model.amount.to_fs(:rounded, precision: @wallet.wallet_template.digit) %></span>
  <span><%= @wallet.wallet_template.unit %></span>
<% else %>
  <span><%= model.amount.to_money.format.html_safe %></span>
<% end %>
</td>
<td>
<% if model.item %>
  <p>
    <span><%= model.advance.name %></span>
    <span class="tag"><%= model.item.amount.to_money.format.html_safe %></span>
  </p>
  <p class="text-grey size-7"><%= model.item.uuid %></p>
<% end %>
</td>
<td><%= model.state_i18n %></td>
<td><%= model.note %></td>
<td>
  <p><%= model.operator&.name %></p>
  <p class="text-grey size-7"><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
