<div>
  <dt><%= Trade::WalletAdvance.human_attribute_name(:amount) %></dt>
  <dd>
  <% if @wallet.wallet_template_id %>
    <span><%= @wallet_advance.amount %></span>
    <span><%= @wallet.wallet_template.unit %></span>
  <% else %>
    <span><%= @wallet_advance.amount.to_money.format.html_safe %></span>
  <% end %>
  </dd>
</div>
<div>
  <dt><%= Trade::WalletAdvance.human_attribute_name(:advance_id) %></dt>
  <dd><%= @wallet_advance.advance&.name %></dd>
</div>
<div>
  <dt><%= Trade::WalletAdvance.human_attribute_name(:note) %></dt>
  <dd><%= @wallet_advance.note %></dd>
</div>
