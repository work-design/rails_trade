<td class="family-monospace"><%= model.title %></td>
<td><%= model.tag_str %></td>
<td>
<% if model.wallet.wallet_template_id %>
  <span><%= model.amount.to_fs(:rounded, precision: model.wallet.wallet_template.digit) %></span>
  <span><%= model.wallet.wallet_template.unit %></span>
<% else %>
  <span class="<%= model.amount < 0 ? 'text-danger' : 'text-success' %>"><%= model.amount.to_money.format.html_safe %></span>
<% end %>
</td>
<td>
  <p><%= model.source_type %></p>
  <p><%= model.source_id %></p>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
