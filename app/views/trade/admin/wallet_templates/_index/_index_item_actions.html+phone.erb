<div class="media">
  <div class="media-left">
    <%= image_tag model.logo, class: 'image is-64x64' if model.logo.attached? %>
  </div>
  <div class="media-content">
    <%= yield %>
  </div>
  <div class="media-right">
    <%= button_to({ action: 'actions', id: model.id }, class: 'button is-borderless') do %>
      <i class="fa-solid fa-lg fa-ellipsis-h"></i>
    <% end %>
  </div>
</div>
