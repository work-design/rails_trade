<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'advances', wallet_template_id: model.id }, aria: { label: t('trade.admin.advances.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-donate"></i>
      <% end %>
      <%= link_to({ controller: 'wallet_prepayments', wallet_template_id: model.id }, aria: { label: t('trade.admin.wallet_prepayments.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-archive"></i>
      <% end %>
      <%= link_to({ controller: 'wallet_goods', wallet_template_id: model.id }, aria: { label: t('trade.admin.wallet_goods.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cogs"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
