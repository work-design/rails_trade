<td>
  <div class="is-several">
    <%= image_tag model.logo, class: 'image is-24x24' if model.logo.attached? %>
    <span><%= model.name %></span>
    <span class="tag"><%= model.code %></span>
  </div>
  <p class="text-grey"><%= model.appid %></p>
</td>
<td><%= model.unit %></td>
<td><%= model.digit %></td>
<td>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :enabled, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td>
  <%= link_to({ controller: 'custom_wallets', wallet_template_id: model.id }, aria: { label: t('trade.admin.cards.index.title') }, class: 'button is-small is-borderless') do %>
    <i class="fa-solid fa-bars"></i>
    <span>（<%= model.wallets_count %>）</span>
  <% end %>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.destroy.confirm') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
    <% end %>
  </div>
  <div data-show-target="item" class="visibility-hidden">
    <%= link_to({ controller: 'advances', wallet_template_id: model.id }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-donate text-success"></i>
      <span class="pl-1"><%= t('.advances.index.title') %></span>
    <% end %>
    <%= link_to({ controller: 'wallet_prepayments', wallet_template_id: model.id }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'box-archive' %>
      <span class="ml-1"><%= t('.wallet_prepayments.index.title') %></span>
    <% end %>
    <%= link_to({ controller: 'wallet_goods', wallet_template_id: model.id }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'gears' %>
      <span class="ml-1"><%= t('.wallet_goods.index.title') %></span>
    <% end %>
  </div>
</td>