<div class="box is-padding-less mb-3">
  <%= link_to({ controller: 'ship/agent/addresses', cart_id: @cart.id }, class: 'media') do %>
    <div class="media-left">
      <%= svg_tag 'location-dot', class: 'icon is-small text-danger' %>
    </div>
    <div class="weui-cell__bd">
    <% if @cart.address %>
      <p>
        <span><%= @cart.address.contact %></span>
        <span><%= @cart.address.tel %></span>
      </p>
      <p class="size-7">
        <span><%= @cart.address.area.full_name %></span>
        <span><%= @cart.address.station&.name %></span>
        <span><%= @cart.address.detail %></span>
      </p>
    <% else %>
      <p>选择地址</p>
    <% end %>
    </div>
    <div class="weui-cell__ft"></div>
  <% end %>
</div>
