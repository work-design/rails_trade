<div class="box is-padding-less">
  <%= link_to({ controller: 'crm/me/contacts', action: 'cart', cart_id: @cart.id }, class: 'media') do %>
    <div class="media-left">
      <%= svg_tag 'user', class: 'icon is-small text-danger' %>
      <span>客户</span>
    </div>
    <div class="media-content">
    <% if @cart.address %>
      <p>
        <span><%= @cart.address.contact %></span>
        <span><%= @cart.address.tel %></span>
      </p>
      <p class="size-7">
        <span><%= @cart.address.area.full_name %></span>
        <span><%= @cart.address.station&.name %></span>
        <span><%= @cart.address.detail %></span>
      </p>
    <% else %>

    <% end %>
    </div>
    <div class="media-right text-grey">
      <span>选择客户</span>
      <%= svg_tag 'chevron-right' %>
    </div>
  <% end %>
</div>
