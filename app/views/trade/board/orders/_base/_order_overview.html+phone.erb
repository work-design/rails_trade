<%= link_to({ action: 'show', id: model.id }, class: 'weui-panel__hd has-text-weight-normal flex justify-content-space-between align-items-center size-7') do %>
  <div>
    <div class="color-grey"><%= model.uuid %></div>
    <div>
      <span class="color-grey"><%= Trade::Order.human_attribute_name(:created_at) %>：</span>
      <time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time>
    </div>
    <div>
      <span class="color-grey">下单机构：</span>
      <span class="tag"><%= model.organ.name %></span>
    </div>
  </div>
  <div>
    <span><%= model.payment_status_i18n %></span>
    <% if model.payment_strategy %>
      <span class="tag is-danger"><%= model.payment_strategy.name %></span>
    <% end %>
  </div>
<% end %>
