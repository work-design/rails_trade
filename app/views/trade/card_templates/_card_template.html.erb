<div class="card is-radiusless" style="background-image: url(<%= rails_blob_url(model.cover) %>); background-size: cover; background-repeat: no-repeat">
  <div class="card-header">
    <p class="card-header-title" style="color: <%= model.text_color %>"><%= model.name %></p>
  </div>
  <div class="card-content" style="color: <%= model.text_color %>">
    <div class="description"></div>
  </div>
  <div class="card-footer">
  </div>
</div>
<div class="panel is-radiusless">
  <div class="panel-block">
    <%= link_to '充值', { controller: '/trade/advances', card_template_id: model.id }, class: 'card-footer-item' %>
  </div>
</div>
