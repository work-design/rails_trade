<%= form_with theme: 'modal', model: @item, url: { action: 'update_price' } do |f| %>
  <header class="modal-card-head">
    <p class="modal-card-title">
      <span><%= @item.good_name %></span>
    </p>
  </header>
  <section class="modal-card-body">
    <%= f.number_field :single_price, autofocus: true %>
  </section>
  <%= f.submit %>
<% end %>
