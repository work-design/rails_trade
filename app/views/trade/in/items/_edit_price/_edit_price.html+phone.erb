<%= form_with theme: 'weui', model: @item, url: { action: 'update_price' }, class: 'modal-card' do |f| %>
  <header class="modal-card-head">
    <p class="modal-card-title"><%= t('.title') %></p>
  </header>
  <section class="modal-card-body">
    <%= f.number_field :single_price, autofocus: true %>
  </section>
  <footer class="modal-card-foot is-block">
    <%= f.submit %>
  </footer>
<% end %>
