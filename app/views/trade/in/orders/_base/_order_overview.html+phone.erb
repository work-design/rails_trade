<%= link_to({ action: 'show', id: model.id }, class: 'weui-panel__hd text-weight-normal flex justify-content-space-between align-items-center size-7') do %>
  <div>
    <div>
      <% if model.aim.present? && model.aim != 'use' %>
        <span class="tag is-danger"><%= model.aim_i18n %></span>
      <% end %>
      <time data-controller="time" data-format="human"><%= model.created_at.to_fs(:iso8601) %></time>
    </div>
    <div>
      <% if model.member %>
      <span>
        <span class="text-grey">下单人：</span>
        <span><%= model.member.name %></span>
      </span>
      <% end %>
      <% if model.maintain %>
      <span>
        <span class="text-grey">代下单：</span>
        <span><%= model.maintain.member.name %></span>
      </span>
      <% end %>
    </div>
  </div>
  <div>
    <span><%= model.payment_status_i18n %></span>
    <% if model.payment_strategy %>
      <span class="tag is-danger"><%= model.payment_strategy.name %></span>
    <% end %>
  </div>
<% end %>
