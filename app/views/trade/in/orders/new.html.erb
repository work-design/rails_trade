<div class="box">
  <p><%= @order.member&.name %></p>
  <p><%= @order.user&.name %></p>
  <p>
    <span class="tag"><%= @order.current_cart.payment_strategy&.name %></span>
    <% if @order.current_cart.deposit_ratio %>
      <span class="tag">
        Deposit Ratio:<%= @order.current_cart.deposit_ratio %>%
      </span>
    <% end %>
  </p>
</div>

<%= render layout: 'index_table' do %>
  <% form_object(@order, theme: 'inline').fields :items, include_id: true do |ef| %>
    <%= render partial: 'item_tbody', layout: 'item_tr', locals: { ef: ef } %>
  <% end %>
<% end %>

