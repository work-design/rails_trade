<div class="column is-one-third">
  <%= form_with model: @order, url: { controller: 'orders', action: 'add' } do |f| %>
    <%= f.fields :items do |ef| %>
      <%= ef.hidden_field :good_type, value: advance.base_class_name %>
      <%= ef.hidden_field :good_id, value: advance.id %>
    <% end %>
    <%= button_tag class: 'button is-outlined is-success has-column-centered is-fullwidth' do %>
      <div class="header has-text-grey has-text-weight-semibold">
        <span><%= advance.amount.to_fs(:rounded, precision: wallet_template.digit) %></span>
        <span><%= wallet_template.unit %></span>
      </div>
      <div class="description color-danger"><%= advance.price.to_money.format.html_safe %></div>
    <% end %>
  <% end %>
</div>
