<div class="column is-one-third">
  <%= form_with model: @order, url: { controller: 'orders', action: 'add' }, class: 'button_to is-block py-2' do |f| %>
    <%= f.fields :trade_items do |ef| %>
      <%= ef.hidden_field :good_id, value: purchase.id %>
      <%= ef.hidden_field :good_type, value: purchase.class_name %>
    <% end %>
    <%= button_tag class: 'has-background-light is-flex-direction-column has-text-centered' do %>
      <div class="header has-text-grey"><%= purchase.title %></div>
      <div class="description has-text-danger"><%= purchase.price.to_money.format(html_wrap: true).html_safe %></div>
    <% end %>
  <% end %>
</div>
