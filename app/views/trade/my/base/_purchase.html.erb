<div class="column is-one-third">
  <%= form_with model: @order, url: { controller: 'orders', action: 'add' }, class: 'button_column' do |f| %>
    <%= f.fields :items do |ef| %>
      <%= ef.hidden_field :good_id, value: purchase.id %>
      <%= ef.hidden_field :good_type, value: purchase.base_class_name %>
    <% end %>
    <%= button_tag class: 'button is-outlined is-success is-block' do %>
      <div class="header has-text-grey"><%= purchase.title %></div>
      <div class="description has-text-danger"><%= purchase.price.to_money.format.html_safe %></div>
    <% end %>
  <% end %>
</div>
