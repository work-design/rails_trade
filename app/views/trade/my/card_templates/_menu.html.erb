<div class="weui-navbar">
<% @card_templates.each do |card_template| %>
  <%= link_to({ action: 'show', id: card_template.id }, class: active_params(id: card_template.id, active: 'weui-navbar__item weui-bar__item_on', item: 'weui-navbar__item')) do %>
    <div class="is-several is-justify-content-center">
      <%= image_tag card_template.logo, class: 'image is-24x24' if card_template.logo.attached? %>
      <span><%= card_template.name %></span>
    </div>
  <% end %>
<% end %>
</div>
