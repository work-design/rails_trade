<div class="card is-radiusless">
  <div class="card-header">
    <p class="card-header-title"><%= model.name %></p>
  </div>
  <div class="card-content" style="height: 200px; color: <%= model.text_color %>; background-image: url(<%= rails_blob_url(model.cover) %>); background-size: cover; background-repeat: no-repeat">
    <div class="description">有效期：<%= model.duration.inspect %></div>
  </div>
  <div class="card-footer">
    <%= render partial: 'advance', collection: model.advances.order(id: :asc) %>
  </div>
</div>
