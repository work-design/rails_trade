<div class="level is-mobile box">
  <div class="level-left">
    <div class="level-item">
    <% if @cart.address %>
      <div>
        <span><%= @cart.address.contact %></span>
        <span class="pl-2"><%= @cart.address.tel %></span>
      </div>
      <p><%= @cart.address.detail %></p>
    <% else %>
      <p>选择地址</p>
    <% end %>
    </div>
  </div>
  <div class="level-right mt-0">
    <%= link_to({ controller: "ship/my/cart/addresses", cart_id: @cart.id }, class: 'level-item') do %>
      <%= svg_tag 'angle-right' %>
    <% end %>
  </div>
</div>
