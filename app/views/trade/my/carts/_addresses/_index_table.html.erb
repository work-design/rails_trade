<div class="buttons are-small mb-0 pt-2">
  <%= link_to({ controller: 'profiled/my/addresses', action: 'new' }, data: { turbo_frame: 'modal' }, class: 'button is-link') do %>
    <i class="fas fa-plus"></i><span><%= t('.new') %></span>
  <% end %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
    <% if defined? cache_key %>
      <% cache cache_key do %>
        <%= render 'index_thead' %>
      <% end %>
    <% else %>
      <%= render 'index_thead' %>
    <% end %>
    </tr>
  </thead>
  <tbody id="tbody">
    <%= yield %>
  </tbody>
</table>
