<div class="weui-panel is-borderless">
  <div data-controller="mini-program" data-mini-program-pt-class="pt-0" class="weui-panel__hd as-bar">
    <%= link_to({ controller: '/ship/box_specifications' }, class: 'px-4') do %>
      <i class="fa-solid fa-lg fa-angle-left"></i>
    <% end %>
    <span class="weui-title">
      <span class="mr-1"><%= t('.title') %></span>
      <%= link_to(action: 'list', return_url: url_for) do %>
        <% if current_cart.member %>
          <span class="weui-badge weui-badge__primary">
            <i class="fa-solid fa-building-user"></i>
            <span><%= current_cart.member.organ.name %></span>
          </span>
        <% else %>
          <span class="weui-badge">
             <i class="fa-solid fa-user"></i>
            <span>个人版</span>
          </span>
        <% end %>
      <% end %>
    </span>
    <i class="px-4" style="width: 48.75px"></i>
  </div>
</div>
