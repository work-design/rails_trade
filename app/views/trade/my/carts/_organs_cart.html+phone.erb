<div class="weui-panel">
  <div class="weui-panel__hd is-several">
    <%= image_tag model[0].logo.variant(resize_to_limit: [150, 150]), class: 'image is-24x24' if model[0].logo.attached? %>
    <span><%= model[0].name %></span>
  </div>
  <div class="weui-panel__bd">
    <div class="weui-media-box weui-media-box_small-appmsg">
      <div class="weui-cells">
      <% model[1].each do |member| %>
        <%= link_to({ controller: 'org/board/members', action: 'qrcodes', id: member.id }, class: 'weui-cell') do %>
          <div class="weui-cell__hd">
            <%= image_tag member.avatar.variant(resize_to_limit: [150, 150]), class: 'image is-24x24' if member.avatar.attached? %>
          </div>
          <div class="weui-cell__bd">
            <p><%= member.departments.first&.full_name %></p>
            <p class="is-size-7"><%= member.identity %></p>
          </div>
          <div class="weui-cell__ft">
          <% if current_cart.member_id == member.id %>
            <i class="fas fa-check has-text-success"></i>
          <% end %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
