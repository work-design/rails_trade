<div class="level is-flex box is-radiusless">
  <div class="level-left">
    <div class="level-item">
      <% if current_cart.address %>
        <p><%= current_cart.address.contact %></p>
        <p><%= current_cart.address.tel %></p>
        <p><%= current_cart.address.detail %></p>
      <% else %>
        <p>选择地址</p>
      <% end %>
    </div>
  </div>
  <div class="level-right mt-0">
    <%= link_to({ action: 'addresses' }, data: { turbo_frame: 'modal' }, class: 'level-item') do %>
      <i class="fa-light fa-angle-right"></i>
    <% end %>
  </div>
</div>
