<div class="level is-mobile box radiusless">
  <div class="level-left">
    <div class="level-item">
    <% if current_cart.address %>
      <div>
        <span><%= current_cart.address.contact %></span>
        <span class="pl-2"><%= current_cart.address.tel %></span>
      </div>
      <p><%= current_cart.address.detail %></p>
    <% else %>
      <p>选择地址</p>
    <% end %>
    </div>
  </div>
  <div class="level-right mt-0">
    <%= link_to({ controller: 'ship/my/addresses' }, data: { turbo_frame: 'modal' }, class: 'level-item') do %>
      <%= svg_tag 'angle-right' %>
    <% end %>
  </div>
</div>
