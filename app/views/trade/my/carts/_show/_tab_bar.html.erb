<div class="weui-tabbar_fixed">
  <div class="weui-tabbar">
    <div class="weui-tabbar__item">
    
    </div>
    <div class="weui-tabbar__item">
      <div class="weui-tabbar__content">
        <%= Trade::Cart.human_attribute_name(:amount) %>:<%= current_cart.amount if current_cart %>
      </div>
    </div>
    <div class="weui-tabbar__item">
      <%= link_to '结算', { controller: 'orders', action: 'new' }, class: 'weui-btn weui-btn_primary' %>
    </div>
  </div>
  <div class="weui-tabbar">
    <%= link_to({ controller: '/home' }, class: 'weui-tabbar__item') do %>
      <i class="fas fa-home weui-tabbar__icon"></i>
      <div class="weui-tabbar__label">首页</div>
    <% end %>
    <%= link_to({ controller: '/factory/products' }, class: 'weui-tabbar__item') do %>
      <i class="fas fa-store-alt weui-tabbar__icon"></i>
      <div class="weui-tabbar__label">产品</div>
    <% end %>
    <%= link_to({ controller: 'trade/my/carts', action: 'show' }, class: 'weui-tabbar__item') do %>
      <i class="fas fa-shopping-cart weui-tabbar__icon">
        <span class="weui-badge"><%= current_cart_count %></span>
      </i>
      <div class="weui-tabbar__label">购物车</div>
    <% end %>
    <%= link_to({ controller: '/my/home' }, class: 'weui-tabbar__item') do %>
      <i class="fas fa-user-alt weui-tabbar__icon"></i>
      <div class="weui-tabbar__label">个人中心</div>
    <% end %>
  </div>
</div>
