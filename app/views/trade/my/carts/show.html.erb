<%= render 'address' %>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <%= render 'show_thead' %>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'item', collection: @items, as: :model %>
  </tbody>
  <%= render 'total_price' %>
  <tfoot>
    <tr>
      <th colspan="4"></th>
      <th>
      <% if @checked_ids.present? %>
        <%= link_to '结算', { controller: 'orders', action: 'new' }, class: 'button is-primary', id: 'new_order' %>
      <% else %>
        <button class="button is-primary" disabled>结算</button>
      <% end %>
      </th>
    </tr>
  </tfoot>
</table>

