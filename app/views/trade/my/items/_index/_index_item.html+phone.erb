<%= link_to({ action: 'show', id: model.id }, state: 'enter', class: 'has-block-space-between text-grey-dark') do %>
  <span><%= model.good_name %></span>
  <span>
    <span class="text-grey"><%= model.number %></span>
    <span>x</span>
    <span class="text-danger"><%= model.original_amount.to_money.format.html_safe %></span>
  </span>
<% end %>
<p class="text-grey">
  <time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time>
</p>
