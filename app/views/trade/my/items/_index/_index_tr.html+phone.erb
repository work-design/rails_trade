<div class="weui-media-box weui-media-box_appmsg">
  <%= link_to({ action: 'show', id: model.id }, state: 'enter', data: { controller: 'empty' }, class: 'weui-media-box__hd as-logo') do %>
    <%= image_tag model.good.logo, class: 'weui-media-box__thumb' if model.good.logo.attached? %>
  <% end %>
  <div class="weui-media-box__bd as-body">
    <%= yield %>
  </div>
  <div class="weui-media-box__ft">
    <%= button_to({ action: 'actions', id: model.id }, state: 'enter', class: 'button is-borderless') do %>
      <i class="fa-solid fa-lg fa-ellipsis-h"></i>
    <% end %>
  </div>
</div>
