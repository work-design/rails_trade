<div class="weui-form-preview is-box">
  <div class="weui-form-preview__bd">
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label">租金计费</label>
      <span class="weui-form-preview__value">
        <span><%= model.good.rent_charges[0].parameter.to_money.format.html_safe %></span>
        <span>/</span>
        <span><%= model.good.rent_unit_i18n %></span>
      </span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:rent_start_at) %></label>
      <span class="weui-form-preview__value family-monospace"><time data-controller="time" data-format="human"><%= model.rent_start_at.to_fs(:iso8601) %></time></span>
    </div>
    <% if model.rent_finish_at %>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:rent_finish_at) %></label>
        <span class="weui-form-preview__value family-monospace"><time data-controller="time" data-format="human"><%= model.rent_finish_at&.to_fs(:iso8601) %></time></span>
      </div>
    <% else %>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label">已租</label>
        <span class="weui-form-preview__value family-monospace text-danger">
          <time data-controller="time-count" data-time-count-time-value="<%= model.rent_start_at.to_fs(:iso8601) %>"><%= exact_distance_time(model.rent_start_at, Time.current) %></time>
        </span>
      </div>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:rent_present_finish_at) %></label>
        <span class="weui-form-preview__value family-monospace"><time data-controller="time" data-format="human"><%= model.rent_present_finish_at&.to_fs(:iso8601) %></time></span>
      </div>
    <% end %>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:duration) %></label>
      <span class="weui-form-preview__value">
        <span><%= model.duration %></span>
        <span><%= model.good.rent_unit_i18n %></span>
      </span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:original_amount) %></label>
      <span class="weui-form-preview__value"><%= model.original_amount.to_money.format.html_safe %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:reduced_amount) %></label>
      <span class="weui-form-preview__value"><%= model.reduced_amount.to_money.format.html_safe %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Item.human_attribute_name(:amount) %></label>
      <span class="weui-form-preview__value"><%= model.amount.to_money.format.html_safe %></span>
    </div>
  </div>
</div>
