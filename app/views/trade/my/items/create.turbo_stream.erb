<% if referer_controller == 'auth/sign' %>
  <%= turbo_stream.append 'body', partial: 'visit', locals: { url: url } %>
  <%# turbo_stream.replace "product_cart_#{@item.good.product_id}", partial: 'production_cart', locals: { model: @item.good, item: @item, cart: @item.current_cart, item_con: controller_path, productions_con: referer_controller } %>
<% else %>
  <%= turbo_stream.replace 'cart_nav', partial: 'cart_nav', locals: { cart: @item.current_cart, cart_con: controller_path.sub('items', 'carts'), order_con: controller_path.sub('items', 'orders') } %>
<% end %>

<% params[:replace].each do |replace| %>
  <%= turbo_stream.replace "#{replace['partial']}_#{@item.cart_identity}", partial: replace['partial'], layout: replace['layout'], locals: { item: @item, cart: @item.current_cart, item_con: controller_path, renew: params[:renew] } %>
<% end %>

<% params[:renew].each do |id, partial| %>
  <%= turbo_stream.replace id, partial: partial, locals: { production: @item.good, options: @item.cart_options, cart: @item.current_cart, item_con: controller_path } %>
<% end if params[:renew] %>
