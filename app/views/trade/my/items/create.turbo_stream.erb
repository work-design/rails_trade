<% if referer_controller == 'auth/sign' %>
  <%= turbo_stream.append 'body', partial: 'visit', locals: { url: url } %>
<% elsif referer_controller == 'factory/productions' %>
  <%= turbo_stream.replace 'cart_nav', partial: 'cart_nav', locals: { cart: @item.current_cart, cart_con: controller_path.sub('items', 'carts') } %>
  <%= turbo_stream.replace "cart_#{@item.cart_identity}", partial: 'production_cart', locals: { cart: @item.current_cart, model: @item.good, item: @item, item_con: controller_path } %>
<% else %>
  <%= turbo_stream.replace 'cart_nav', partial: 'cart_nav', locals: { cart: @item.current_cart, cart_con: controller_path.sub('items', 'carts') } %>
  <%= turbo_stream.replace "cart_#{@item.cart_identity}", partial: 'cart', locals: { cart: @item.current_cart, item: @item, item_con: controller_path } %>
<% end %>
