<% if referer_controller == 'auth/sign' %>
  <%= turbo_stream.append 'body', partial: 'visit', locals: { url: url } %>
<% elsif referer_controller == 'factory/productions' %>
  <%= turbo_stream.replace "production_cart_#{@item.cart_identity}", partial: 'cart_new', locals: { cart: @item.current_cart, item: @item, item_con: controller_path } %>
<% else %>
  <%= turbo_stream.replace 'cart_nav', partial: 'cart_nav', locals: { cart: @item.current_cart, cart_con: controller_path.sub('items', 'carts'), order_con: controller_path.sub('items', 'orders') } %>
  <%= turbo_stream.replace @item.cart_identity, partial: 'cart', locals: { cart: @item.current_cart, item: @item, item_con: controller_path } %>
<% end %>
