<div class="weui-panel">
  <%= button_to({ controller: 'ship/my/addresses', action: 'order', address_id: @order.address_id }, class: 'weui-cell weui-cell_access', form: { class: 'weui-panel__bd' }) do %>
    <div class="weui-cell__hd">
      <i class="fa-light fa-location-dot fa-fw has-text-danger pr-2"></i>
    </div>
    <div class="weui-cell__bd">
    <% if @order.address %>
      <p>
        <span><%= @order.address.contact %></span>
        <span><%= @order.address.tel %></span>
      </p>
      <p class="is-size-7">
        <span><%= @order.address.area.full_name %></span>
        <span><%= @order.address.station&.name %></span>
        <span><%= @order.address.detail %></span>
      </p>
    <% else %>
      <p>收货人信息</p>
    <% end %>
    </div>
    <div class="weui-cell__ft"></div>
  <% end %>
</div>
