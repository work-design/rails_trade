<%= form_with model: @order, url: date_my_order_path(@order) do |f| %>
  <%= render 'error_messages', target: @order %>
  <div class="form-group">
    <%= f.label :order_on, '预约日期：', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :order_on, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :order_at, '预约时间：', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.time_field :order_at, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-5">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
