<div class="box mx-3">
  <table class="table as-show is-borderless">
    <tr>
      <td><%= Trade::Order.human_attribute_name(:uuid) %></td>
      <td data-controller="clipboard">
        <span data-clipboard-target="source"><%= model.uuid %></span>
        <span class="weui-badge weui-badge__default" data-action="click->clipboard#copy">复制</span>
        <div data-clipboard-target="toast" class="weui-toast__wrap">
          <div class="weui-mask_transparent"></div>
          <div class="weui-toast">
            <i class="weui-icon-success-no-circle weui-icon_toast"></i>
            <p class="weui-toast__content">复制成功</p>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td><%= Trade::Order.human_attribute_name(:created_at) %></td>
      <td><time data-controller="time" data-format="human"><%= model.created_at.to_fs(:iso8601) %></time></td>
    </tr>
    <tr>
      <td><%= Trade::Order.human_attribute_name(:item_amount) %></td>
      <td><%= model.item_amount.to_money.format.html_safe %></td>
    </tr>
    <% if model.overall_additional_amount > 0 %>
    <tr>
      <td><%= Trade::Order.human_attribute_name(:overall_additional_amount) %></td>
      <td><%= model.overall_additional_amount.to_money.format.html_safe %></td>
    </tr>
    <% end %>
    <% if model.overall_reduced_amount > 0 %>
    <tr>
      <td><%= Trade::Order.human_attribute_name(:overall_reduced_amount) %></td>
      <td><%= model.overall_reduced_amount.to_money.format.html_safe %></td>
    </tr>
    <% end %>
    <% if model.advance_amount.to_d > 0 %>
      <tr>
        <td><%= Trade::Order.human_attribute_name(:advance_amount) %></td>
        <td class="has-text-danger"><%= model.advance_amount.to_money.format.html_safe %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= Trade::Order.human_attribute_name(:amount) %></td>
      <td class="has-text-danger"><%= model.amount.to_money.format.html_safe %></td>
    </tr>
    <% if model.refunded_amount.to_d > 0 %>
      <tr>
        <td><%= Trade::Order.human_attribute_name(:refunded_amount) %></td>
        <td class="has-text-danger"><%= model.refunded_amount.to_money.format.html_safe %></td>
      </tr>
    <% end %>
  </table>
</div>
