<div class="panel mx-3 mt-3">
  <div class="panel-heading">
    <% if model.aim != 'use' %>
      <span class="tag is-danger"><%= model.aim_i18n %></span>
    <% end %>
    <span><%= model.payment_status_i18n %></span>
    <% if model.payment_strategy %>
      <span class="tag is-danger"><%= model.payment_strategy.name %></span>
    <% end %>
  </div>
  <div class="panel-block">
    <%= render partial: 'item', collection: model.items, as: :item %>
  </div>
</div>
