<div class="weui-panel">
  <div class="weui-panel__hd"><%= model.payment_status_i18n %></div>
  <div class="weui-panel__bd">
    <%= render partial: 'trade_item', collection: model.trade_items, as: :trade_item %>
    <div class="weui-media-box weui-media-box_text pb-1 pt-2">
      <ul class="weui-media-box__info m-0">
        <li class="weui-media-box__info__meta"><%= model.amount.to_money.format(html_wrap: true).html_safe %></li>
        <li class="weui-media-box__info__meta"><%= model.payment_status_i18n %></li>
        <li class="weui-media-box__info__meta weui-media-box__info__meta_extra">
          <%= link_to '支付', { action: 'payment_types', id: model.id } unless model.all_paid? %>
        </li>
      </ul>
      <ul class="weui-media-box__info mt-2">
        <li class="weui-media-box__info__meta">
          <span>下单时间：</span>
          <time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time>
        </li>
      </ul>
    </div>
  </div>
  <div class="weui-panel__ft">
    <div class="weui-cell weui-cell_link">
      <button
        class="weui-btn weui-btn_default"
        data-controller="wechat"
        data-wechat-options-value="<%= current_wechat_app.js_config(request.original_url).to_json %>"
        data-wechat-apis-value="<%= ['closeWindow'].to_json %>"
        data-action="wechat#close"
      >联系客服</button>
    </div>
  </div>
</div>
