<div class="weui-form-preview mt-4">
  <div class="weui-form-preview__bd">
    <div class="weui-form-prewview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:uuid) %></label>
      <span class="weui-form-preview__value" data-controller="clipboard">
        <span data-clipboard-target="source"><%= model.uuid %></span>
        <span class="weui-badge weui-badge__default" data-action="clipboard#copy">复制</span>
      </span>
    </div>
    <div class="weui-form-prewview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:created_at) %></label>
      <span class="weui-form-preview__value"><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:item_amount) %></label>
      <span class="weui-form-preview__value"><%= model.item_amount.to_money.format(html_wrap: true).html_safe %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:overall_additional_amount) %></label>
      <span class="weui-form-preview__value"><%= model.overall_additional_amount.to_money.format(html_wrap: true).html_safe %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:overall_reduced_amount) %></label>
      <span class="weui-form-preview__value"><%= model.overall_reduced_amount.to_money.format(html_wrap: true).html_safe %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Trade::Order.human_attribute_name(:amount) %></label>
      <span class="weui-form-preview__value"><%= model.amount.to_money.format(html_wrap: true).html_safe %></span>
    </div>
  </div>
</div>
