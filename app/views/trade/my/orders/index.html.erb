<table class="ui selectable table">
  <thead>
    <tr>
      <th><%= Order.human_attribute_name(:uuid) %></th>
      <th><%= Order.human_attribute_name(:amount) %></th>
      <th><%= Order.human_attribute_name(:payment_status) %></th>
      <th>Pay</th>
      <th></th>
    </tr>
  </thead>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.uuid %></td>
      <td>
        <%= order.amount %>
      </td>
      <td><%= order.payment_status_i18n %></td>
      <td>
        <% if order.can_pay? %>
          <%= link_to '支付', payment_type_my_order_path(order), remote: true, class: 'ui mini button' %>
        <% end %>
      </td>
      <td>
        <%= link_to my_order_path(order), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_my_order_path(order), remote: true, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @orders %>
