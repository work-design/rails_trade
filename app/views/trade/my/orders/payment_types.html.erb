<table class="table is-fullwidth is-borderless as-show">
  <tbody>
    <% unless @order.items.map(&:good_type).include?('Trade::Advance') %>
      <%= render partial: 'wallet', collection: @order.user.cards, as: :card if @order.user %>
    <% end %>
    <tr>
      <td class="has-text-right"><%= Trade::Order.human_attribute_name(:unreceived_name) %></td>
      <td><%= @order.unreceived_amount.to_money.format(html_wrap: true).html_safe %></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td colspan="2">
        <button class="button is-danger is-large">立即支付</button>
      </td>
    </tr>
  </tbody>
</table>
