<%= render 'top_bar' %>

<%= form_with theme: 'weui', model: @payment, scope: :payment, url: { action: 'payment_order_create' } do |f| %>
  <div class="form-fields">
    <%= hidden_field_tag :payment_order_id, @payment_order.id %>
    <%= render partial: 'form', locals: { f: f } %>
  </div>
  <%= f.submit %>
<% end %>
