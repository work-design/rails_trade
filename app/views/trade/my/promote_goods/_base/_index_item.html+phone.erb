<div class="media-content">
  <p>
    <span><%= model.promote.name %></span>
    <span class="tag"><%= model.good_type_i18n %></span>
  </p>
  <time data-controller="time"><%= model.expire_at&.to_fs(:iso8601) %></time>
  <p>
    <span>
    <% if model.use_limit.blank? %>
      <span>不限次</span>
    <% else %>
      <span class="color-grey">限用</span><span><%= model.use_limit %></span>
    <% end %>
    </span>
    <span>/</span>
    <span>已用<%= model.item_promotes_count %></span>
  </p>
</div>
