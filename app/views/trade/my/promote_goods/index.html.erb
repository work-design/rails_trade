<%= render 'top_bar' %>

<% if @promote_goods.blank? && @global_promote_goods.blank? %>
<div class="has-column-centered">
  <p class="has-text-centered has-text-grey is-flex-grow-1">暂无优惠券</p>
</div>
<% else %>
<table class="table is-striped is-borderless is-fullwidth">
  <%= render partial: 'promote_good', collection: @promote_goods, as: :model %>
  <%= render partial: 'promote_good', collection: @global_promote_goods, as: :model %>
</table>
<% end %>
