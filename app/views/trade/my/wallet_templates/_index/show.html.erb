<%= render 'top_bar' %>

<div class="weui-panel">

  <div class="weui-panel__bd">
    <div class="columns m-4 is-flex is-multiline is-mobile">
      <%= render partial: 'advance', collection: @wallet_template.unopened_advances.without_card, as: :advance %>
    </div>
    <% @wallet_template.unopened_advances.with_card.group_by(&:card_template).each do |card_template, advances| %>
    <div class="mx-4">
      <span><%= card_template.name %>专享</span>
      <span>点击开通</span>
    </div>
    <div class="columns m-4 is-flex is-multiline is-mobile">
      <%= render partial: 'advance', collection: advances, as: :advance %>
    </div>
    <% end %>
  </div>
</div>
