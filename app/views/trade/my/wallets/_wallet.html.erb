<div class="weui-panel">
  <div class="weui-panel__hd level is-flex">
    <span class="level-left">充值</span>
    <div class="level-right mt-0 pr-3 has-text-weight-normal">
      <span><%= Trade::Wallet.human_attribute_name(:amount) %>：<%= model.amount %></span>
      <%= link_to '记录', { controller: 'wallet_logs' } %>
    </div>
  </div>
  <div class="weui-panel__bd">
    <div class="columns m-4 is-flex is-multiline is-mobile">
      <%= render partial: 'advance', collection: model.wallet_template.unopened_advances %>
    </div>
  </div>
</div>
