<%= form_with theme: 'weui', model: model, scope: model_name, url: { action: 'create' }, state: 'return', id: 'payment' do |f| %>
  <div class="weui-form__control-area">
    <div class="weui-cells__group weui-cells__group_form">
      <div class="weui-cells__title"><%= t('.title') %></div>
      <div class="weui-cells">
        <%= render partial: 'form', locals: { f: f } %>
      </div>
    </div>
  </div>
  <div class="weui-form__opr-area">
    <div class="number_keyboard">
      <div class="keyboard-left">
        <div class="keyboard-item width-1x"><div>1</div></div>
        <div class="keyboard-item width-1x"><div>2</div></div>
        <div class="keyboard-item width-1x"><div>3</div></div>
        <div class="keyboard-item width-1x"><div>4</div></div>
        <div class="keyboard-item width-1x"><div>5</div></div>
        <div class="keyboard-item width-1x"><div>6</div></div>
        <div class="keyboard-item width-1x"><div>7</div></div>
        <div class="keyboard-item width-1x"><div>8</div></div>
        <div class="keyboard-item width-1x"><div>9</div></div>
        <div class="keyboard-item width-2x"><div>0</div></div>
        <div class="keyboard-item width-1x"><div>.</div></div>
      </div>
      <div class="keyboard-right">
        <div class="keyboard-item height-1x"><div><i class="fa-solid fa-arrow-left"></i></div></div>
        <div class="keyboard-item height-3x">
          <div>
            <%= f.submit '付款', all: { submit: nil }, class: 'button is-borderless' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
