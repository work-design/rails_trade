<div class="box is-padding-less">
  <%= render 'my/profile_item' %>
</div>

<div class="box is-padding-less">
  <div class="box-header">
    <span class="has-border-left-primary size-7">企业用餐</span>
  </div>
  <div class="p-3">
    <%= render partial: 'organs_cart', collection: @members, as: :model %>
  </div>
</div>

<div class="box">
  <div class="weui-panel__bd">
  <% @roles.each do |role| %>
    <%= link_to({ controller: 'org/board/organs', action: 'new', role_id: role.id }, class: 'media') do %>
      <%= svg_tag 'plus' %>
      <span class="pl-1"><%= role.tip %></span>
    <% end %>
  <% end %>
  </div>
</div>
