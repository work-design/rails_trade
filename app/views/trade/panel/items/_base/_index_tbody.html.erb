<td>
  <p>
    <span><%= model.good_type_i18n %></span>
    <span class="tag"><%= model.good_id %></span>
  </p>
  <p><%= link_to model.good_name, { action: 'show', id: model.id } %></p>
</td>
<td><%= model.number %></td>
<td>
  <p class="color-grey"><%= model.single_price.to_money.format.html_safe %></p>
</td>
<td>
  <p><%= model.additional_amount.to_money.format.html_safe %></p>
  <p><%= model.reduced_amount.to_money.format.html_safe %></p>
</td>
<td><%= model.status_i18n %></td>
<td><%= model.aim_i18n %></td>
<td>
  <% if model.user %>
  <p class="is-several">
    <%= image_tag model.user.avatar, class: 'image is-32x32' if model.user.avatar.attached? %>
    <span><%= model.user.name %></span>
  </p>
  <% end %>
  <% if model.member %>
  <p>
    <span><%= model.member.name %></span>
    <% if model.member_organ %>
      <span class="color-grey">（<%= model.member_organ.name %>）</span>
    <% end %>
  </p>
  <% end %>
</td>
<td>
  <p><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
